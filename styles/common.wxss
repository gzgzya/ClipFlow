/* 公共样式变量 */

/* 颜色 */
.status-bg {
  background-color: rgba(0, 0, 0, 0.8);
}

.nav-bg {
  background: linear-gradient(to right, #0f172a, #1e293b);
}

.content-bg {
  background-color: #020617;
}

.card-bg {
  background-color: #1e293b;
}

.card-border {
  border: 1rpx solid #334155;
}

.dashed-border {
  border: 1rpx dashed #475569;
}

.primary-text {
  color: #f1f5f9;
}

.secondary-text {
  color: #94a3b8;
}

.accent-text {
  color: #60a5fa;
}

.success-text {
  color: #34d399;
}

.warning-text {
  color: #fbbf24;
}

.error-text {
  color: #f87171;
}

/* 间距 */
.padding-container {
  padding: 0 32rpx;
}

.section-spacing {
  margin-bottom: 24rpx;
}

.card-spacing {
  margin-bottom: 16rpx;
}

/* 按钮 */
.icon-button {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #1e293b;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-button icon {
  color: #f1f5f9;
}

/* 状态栏 */
.status-bar {
  height: 40rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 12rpx;
  color: #f1f5f9;
  font-weight: 600;
}

.status-icons {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.battery {
  width: 16rpx;
  height: 8rpx;
  border: 2rpx solid #f1f5f9;
  border-radius: 2rpx;
  position: relative;
}

.battery::after {
  content: '';
  position: absolute;
  top: 50%;
  right: -4rpx;
  transform: translateY(-50%);
  width: 4rpx;
  height: 6rpx;
  background-color: #f1f5f9;
  border-radius: 0 2rpx 2rpx 0;
}

/* 导航栏 */
.nav-bar {
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #f1f5f9;
}

.nav-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 1.4;
}

.title-main {
  font-size: 14rpx;
  font-weight: 600;
}

.title-sub {
  font-size: 10rpx;
  color: #94a3b8;
}

/* 图片容器 */
.image-container {
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #475569;
}

.image-container.round {
  border-radius: 50%;
}

