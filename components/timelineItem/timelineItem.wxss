/* 时间线项组件样式 */
.timeline-item {
  min-width: 112rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  color: #f1f5f9;
  border: 1px solid;
}

.item-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 4rpx;
}

.item-container.exterior {
  background-color: rgba(59, 130, 246, 0.4);
  border-color: rgba(59, 130, 246, 0.6);
  color: #e2e8f0;
}

.item-container.interior {
  background-color: rgba(16, 185, 129, 0.3);
  border-color: rgba(16, 185, 129, 0.6);
  color: #e2e8f0;
}

.item-container.highlight {
  background-color: rgba(245, 158, 11, 0.3);
  border-color: rgba(245, 158, 11, 0.6);
  color: #e2e8f0;
}

.item-type {
  font-size: 20rpx;
}

.item-duration {
  font-size: 18rpx;
  color: #cbd5e1;
}