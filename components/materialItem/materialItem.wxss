/* 素材项组件样式 */
.material-item {
  border-radius: 32rpx;
  background-color: rgba(15, 23, 42, 0.9);
  border: 1px solid #1e293b;
  overflow: hidden;
}

.item-container {
  display: flex;
}

.image-container {
  width: 192rpx;
  height: 128rpx;
  position: relative;
}

.material-image {
  width: 100%;
  height: 100%;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent, rgba(0, 0, 0, 0.4));
}

.duration-tag {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 16rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #ffffff;
}

.type-tag {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 16rpx;
  color: #ffffff;
}

.type-tag.exterior {
  background-color: #3b82f6;
}

.type-tag.interior {
  background-color: #10b981;
}

.type-tag.highlight {
  background-color: #f59e0b;
}

.info-container {
  flex: 1;
  padding: 16rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.info-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.title-container {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.material-title {
  font-size: 22rpx;
  color: #f1f5f9;
}

.material-quality {
  font-size: 20rpx;
  color: #94a3b8;
}

.status-button {
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
  font-size: 20rpx;
  border: none;
}

.status-button.added {
  color: #34d399;
  background-color: rgba(16, 185, 129, 0.1);
  border: 1px solid rgba(16, 185, 129, 0.4);
}

.status-button.add {
  color: #60a5fa;
  background-color: rgba(59, 130, 246, 0.1);
  border: 1px solid rgba(59, 130, 246, 0.4);
}

.info-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.material-time {
  font-size: 20rpx;
  color: #64748b;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
}

.action-button {
  font-size: 20rpx;
  background: none;
  border: none;
}

.action-button.retry {
  color: #f59e0b;
}

.action-button.delete {
  color: #f87171;
}