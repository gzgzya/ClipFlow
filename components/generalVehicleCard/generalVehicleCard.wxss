@import "../../styles/common.wxss";

.vehicle-card {
  border-radius: 16rpx;
  padding: 24rpx;
}

.card-content {
  display: flex;
  align-items: center;
}

.image-container {
  width: 72rpx;
  height: 72rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #475569;
  margin-right: 16rpx;
}

.vehicle-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.info-container {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.vehicle-title {
  font-size: 12rpx;
  margin-bottom: 8rpx;
}

.vehicle-status {
  font-size: 10rpx;
  margin-bottom: 8rpx;
}

.vehicle-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.detail-item {
  font-size: 10rpx;
  display: flex;
  align-items: center;
}

.detail-icon {
  margin-right: 4rpx;
}

.action-button {
  font-size: 10rpx;
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
  height: auto;
  line-height: 1.4;
}

.action-button.continue {
  background-color: #3b82f6;
  color: white;
}

.action-button.interior {
  background-color: #334155;
  color: #f1f5f9;
}

.action-button.start {
  background-color: #3b82f6;
  color: white;
}