<view class="vehicle-card card-bg card-border">
  <view class="card-content">
    <view class="image-container">
      <image class="vehicle-image" src="{{vehicle.image}}" mode="aspectFill"></image>
    </view>
    
    <view class="info-container">
      <text class="vehicle-title primary-text">{{vehicle.name}} Â· {{vehicle.plate}}</text>
      
      <text wx:if="{{vehicle.status}}" class="vehicle-status secondary-text">{{vehicle.status}}</text>
      
      <view wx:if="{{vehicle.details}}" class="vehicle-details">
        <block wx:for="{{vehicle.details}}" wx:key="id">
          <text class="detail-item secondary-text">
            <icon wx:if="{{item.icon}}" type="{{item.icon}}" size="12" class="detail-icon {{item.iconClass}}"></icon>
            {{item.text}}
          </text>
        </block>
      </view>
    </view>
    
    <block wx:if="{{showAction && vehicle.actionText}}">
      <button class="action-button {{vehicle.actionType}}" size="mini" bindtap="onActionTap">
        {{vehicle.actionText}}
      </button>
    </block>
  </view>
</view>