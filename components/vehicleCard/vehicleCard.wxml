<!-- 车辆卡片组件 -->
<view class="vehicle-card">
  <view class="card-content">
    <view class="image-container">
      <image class="vehicle-image" src="{{processedVehicle.imageUrl}}" mode="aspectFill"></image>
    </view>
    
    <view class="info-container">
      <view class="header">
        <text class="plate">{{processedVehicle.plate}}</text>
        <view class="status-tag {{processedVehicle.statusClass}}">{{processedVehicle.status}}</view>
      </view>
      
      <view class="model">{{processedVehicle.model}}</view>
      
      <view class="features">{{processedVehicle.features}}</view>
      
      <view class="stats-and-action">
        <view class="stats">
          <text class="stat-item">
            <icon class="stat-icon film" type="video" size="20rpx"></icon>
            素材 {{processedVehicle.materialCount}}
          </text>
          <text class="stat-item">
            <icon class="stat-icon clapperboard" type="video_fill" size="20rpx"></icon>
            成片 {{processedVehicle.clipCount}}
          </text>
          <text class="stat-item">
            <icon class="stat-icon paper" type="send" size="20rpx"></icon>
            已发 {{processedVehicle.publishCount}}
          </text>
        </view>
        <button class="action-button {{processedVehicle.actionType}}">{{processedVehicle.actionText}}</button>
      </view>
    </view>
  </view>
</view>