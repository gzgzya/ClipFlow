/* 车辆卡片组件样式 */
.vehicle-card {
  border-radius: 60rpx; /* rounded-3xl */
  background-color: rgba(15, 23, 42, 0.8); /* bg-slate-900/80 */
  border: 1px solid rgba(100, 116, 139, 0.7); /* border-slate-700/70 */
  overflow: hidden;
}

.card-content {
  display: flex;
}

.image-container {
  width: 224rpx; /* w-28 * 8 = 224rpx */
  height: 192rpx; /* h-24 * 8 = 192rpx */
  overflow: hidden;
}

.vehicle-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.info-container {
  flex: 1;
  padding: 24rpx; /* p-3 */
  display: flex;
  flex-direction: column;
  gap: 8rpx; /* space-y-1 */
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.plate {
  font-size: 24rpx; /* text-xs */
  color: #94a3b8; /* text-slate-400 */
}

.status-tag {
  font-size: 20rpx; /* text-[10px] */
  padding: 4rpx 16rpx; /* px-2 py-0.5 */
  border-radius: 32rpx; /* rounded-full */
  flex-shrink: 0;
}

.status-tag.for-sale {
  background-color: rgba(16, 185, 129, 0.15); /* bg-emerald-500/15 */
  color: #34d399; /* text-emerald-400 */
  border: 1px solid rgba(16, 185, 129, 0.4); /* border-emerald-500/40 */
}

.status-tag.sold {
  background-color: rgba(100, 116, 139, 0.3); /* bg-slate-600/30 */
  color: #cbd5e1; /* text-slate-300 */
  border: 1px solid rgba(100, 116, 139, 0.6); /* border-slate-500/60 */
}

.model {
  font-size: 28rpx; /* text-sm */
  font-weight: 600;
  color: #f8fafc; /* text-slate-50 */
}

.features {
  font-size: 22rpx; /* text-[11px] */
  color: #94a3b8; /* text-slate-400 */
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.stats-and-action {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx; /* mt-1 */
}

.stats {
  display: flex;
  align-items: center;
  gap: 16rpx; /* space-x-2 */
}

.stat-item {
  font-size: 20rpx; /* text-[10px] */
  color: #94a3b8; /* text-slate-400 */
  display: flex;
  align-items: center;
}

.stat-icon {
  margin-right: 4rpx; /* mr-1 */
  font-size: 20rpx; /* text-[10px] */
}

.stat-icon.film {
  color: #60a5fa; /* text-blue-400 */
}

.stat-icon.clapperboard {
  color: #34d399; /* text-emerald-400 */
}

.stat-icon.paper {
  color: #fbbf24; /* text-amber-400 */
}

.action-button {
  font-size: 20rpx; /* text-[10px] 与统计信息字体大小一致 */
  padding: 8rpx 16rpx; /* px-2 py-1 */
  border-radius: 32rpx; /* rounded-full */
  border: none;
  flex-shrink: 0;
}

.action-button.continue {
  background-color: #3b82f6; /* 蓝色背景 */
  color: #ffffff; /* 白色文字 */
}

.action-button.record {
  background-color: #10b981; /* 绿色背景 */
  color: #ffffff; /* 白色文字 */
}