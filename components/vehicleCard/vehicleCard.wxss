/* 车辆卡片组件样式 */
.vehicle-card {
  border-radius: 48rpx;
  background-color: rgba(15, 23, 42, 0.8);
  border: 1px solid rgba(100, 116, 139, 0.7);
  overflow: hidden;
}

.card-content {
  display: flex;
}

.image-container {
  width: 112rpx;
  height: 96rpx;
  overflow: hidden;
}

.vehicle-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.info-container {
  flex: 1;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.plate {
  font-size: 24rpx;
  color: #94a3b8;
}

.status-tag {
  font-size: 20rpx;
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
}

.status-tag.for-sale {
  background-color: rgba(16, 185, 129, 0.15);
  color: #34d399;
  border: 1px solid rgba(16, 185, 129, 0.4);
}

.status-tag.sold {
  background-color: rgba(100, 116, 139, 0.3);
  color: #cbd5e1;
  border: 1px solid rgba(100, 116, 139, 0.6);
}

.model {
  font-size: 28rpx;
  font-weight: 600;
  color: #f8fafc;
}

.features {
  font-size: 22rpx;
  color: #94a3b8;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.stats-and-action {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 8rpx;
}

.stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.stat-item {
  font-size: 20rpx;
  color: #94a3b8;
  display: flex;
  align-items: center;
}

.stat-icon {
  margin-right: 4rpx;
  font-size: 20rpx;
}

.stat-icon.film {
  color: #60a5fa;
}

.stat-icon.clapperboard {
  color: #34d399;
}

.stat-icon.paper {
  color: #fbbf24;
}

.action-button {
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
  border: none;
}

.action-button.continue {
  background-color: #3b82f6;
  color: #ffffff;
}

.action-button.record {
  background-color: #1e293b;
  color: #f1f5f9;
}