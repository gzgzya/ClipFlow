/* 成片卡片组件样式 */
.clip-card {
  background-color: #1e293b;
  border: 1rpx solid #334155;
  border-radius: 16rpx;
  overflow: hidden;
}

.card-content {
  display: flex;
}

.image-container {
  position: relative;
  width: 224rpx;
  height: 192rpx;
}

.clip-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, transparent 30%, rgba(0, 0, 0, 0.3) 100%);
}

.play-icon {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 56rpx;
  height: 56rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
}

.duration-tag {
  position: absolute;
  bottom: 8rpx;
  left: 8rpx;
  font-size: 10rpx;
  padding: 4rpx 6rpx;
  border-radius: 8rpx;
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
}

.template-tag {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  font-size: 10rpx;
  padding: 4rpx 6rpx;
  border-radius: 8rpx;
  color: white;
}

.template-tag.standard {
  background-color: #3b82f6;
}

.template-tag.interior {
  background-color: #10b981;
}

.template-tag.highlight {
  background-color: #f59e0b;
}

.info-container {
  flex: 1;
  padding: 16rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.title-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.clip-title {
  font-size: 12rpx;
  color: #f1f5f9;
  flex: 1;
  margin-right: 16rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.time-text {
  font-size: 10rpx;
  color: #94a3b8;
}

.description-text {
  font-size: 10rpx;
  color: #94a3b8;
  line-height: 1.4;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.actions-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-container {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-tag {
  font-size: 10rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.status-tag.published {
  background-color: rgba(16, 185, 129, 0.15);
  color: #6ee7b7;
  border: 1rpx solid rgba(16, 185, 129, 0.4);
}

.status-tag.pending {
  background-color: #334155;
  color: #f1f5f9;
}

.status-tag.failed {
  color: #f87171;
}

.vehicle-tag {
  font-size: 10rpx;
  color: #94a3b8;
  display: flex;
  align-items: center;
}

.vehicle-icon {
  color: #60a5fa;
  margin-right: 4rpx;
}

.buttons-container {
  display: flex;
  gap: 8rpx;
}

.action-button {
  font-size: 10rpx;
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  height: auto;
  line-height: 1.4;
}

.copy-button {
  background-color: #334155;
  color: #f1f5f9;
}

.publish-button,
.distribute-button {
  background-color: #3b82f6;
  color: white;
}

.retry-button {
  background-color: rgba(245, 158, 11, 0.15);
  color: #fbbf24;
  border: 1rpx solid rgba(245, 158, 11, 0.4);
}

.platform-status-bar {
  border-top: 1rpx solid #334155;
  padding: 12rpx 24rpx;
}

.platform-list {
  display: flex;
  justify-content: space-between;
}

.platform-item {
  display: flex;
  align-items: center;
  font-size: 10rpx;
}

.platform-icon {
  margin-right: 4rpx;
}

.platform-text.published {
  color: #6ee7b7;
}

.platform-text.pending {
  color: #fbbf24;
}

.platform-text.failed {
  color: #f87171;
}

.platform-text.unconfigured {
  color: #94a3b8;
}