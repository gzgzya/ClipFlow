/* 模板项组件样式 */
.template-item {
  min-width: 192rpx;
  padding: 24rpx;
  border-radius: 32rpx;
  background-color: #0f172a;
  border: 1px solid #334155;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.template-item.active {
  background-color: #3b82f6;
  border: none;
}

.subtitle {
  font-size: 20rpx;
  opacity: 0.8;
}

.template-item.active .subtitle {
  color: #bfdbfe;
  opacity: 1;
}

.title {
  font-size: 28rpx;
  font-weight: 600;
  color: #f1f5f9;
}

.template-item.active .title {
  color: #ffffff;
}

.description {
  font-size: 20rpx;
  color: #94a3b8;
  margin-top: 8rpx;
}

.template-item.active .description {
  color: #bfdbfe;
  opacity: 0.8;
}