/* 车辆详情页面样式 */
.container {
  width: 100%;
  height: 100vh;
  background-color: #0f172a;
  display: flex;
  flex-direction: column;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #0f172a;
}

.top-section {
  padding: 24rpx 32rpx 16rpx 32rpx;
  background-color: #0f172a;
}

/* 状态栏 */
.status-bar {
  height: 40rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #f1f5f9;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx;
  /* 添加阴影效果使状态栏更明显 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.status-text {
  font-weight: 600;
}

.status-icons {
  display: flex;
  align-items: center;
}

.status-icon {
  margin-left: 8rpx;
}

/* 顶部导航 */
.nav-bar {
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(to right, #0f172a, #1e293b);
  color: #f1f5f9;
  /* 添加顶部边距以增加与状态栏的间距 */
  margin-top: 16rpx;
  border-radius: 24rpx;
  /* 添加阴影效果使导航栏更明显 */
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.nav-button {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: rgba(30, 41, 59, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  color: #f1f5f9;
}

.nav-title {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-main {
  font-size: 32rpx;
  font-weight: 600;
}

.title-sub {
  font-size: 24rpx;
  color: #94a3b8;
  /* 增加顶部边距使车牌号与车辆型号之间有更多空间 */
  margin-top: 8rpx;
}

/* 添加的间距视图样式 */
.spacing-view {
  height: 32rpx;
  background-color: #0f172a;
}

/* 顶部横幅 */
.banner-section {
  height: 352rpx;
  position: relative;
}

.banner-image {
  width: 100%;
  height: 100%;
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to top, #0f172a, rgba(15, 23, 42, 0.2), transparent);
}

.banner-content {
  position: absolute;
  bottom: 24rpx;
  left: 32rpx;
  right: 32rpx;
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
}

.banner-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.status-tag {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
  background-color: rgba(16, 185, 129, 0.2);
  border: 1px solid rgba(16, 185, 129, 0.4);
  font-size: 24rpx;
  color: #34d399;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #34d399;
  margin-right: 8rpx;
}

.vehicle-status {
  /* 为车辆状态标签增加上边距 */
  margin-top: 16rpx;
}

.vehicle-model {
  font-size: 32rpx;
  font-weight: 600;
  color: #f8fafc;
  margin-top: 8rpx;
}

.vehicle-details {
  font-size: 24rpx;
  color: #cbd5e1;
  margin-top: 4rpx;
}

.thumbnail-container {
  display: flex;
  gap: 8rpx;
}

.thumbnail-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 32rpx;
  border: 1px solid rgba(100, 116, 139, 0.7);
}

/* 进度部分 */
.progress-section {
  /* 在进度部分也增加一些顶部间距 */
  padding: 24rpx 32rpx;
  margin-top: 24rpx;
}

.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.progress-title {
  font-size: 28rpx;
  color: #94a3b8;
}

.progress-tip {
  font-size: 26rpx;
  color: #60a5fa;
}

.progress-bar {
  height: 12rpx;
  border-radius: 6rpx;
  background-color: #1e293b;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  width: 75%;
  background: linear-gradient(to right, #3b82f6, #34d399, #fbbf24);
}

.progress-stats {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #94a3b8;
}

.stats-details {
  display: flex;
  gap: 24rpx;
}

/* 快捷操作按钮 */
.action-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 24rpx;
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.action-button {
  padding: 24rpx 16rpx;
  border-radius: 32rpx;
  background-color: rgba(30, 41, 59, 0.8);
  color: #f1f5f9;
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid rgba(100, 116, 139, 0.7);
}

.action-button.primary {
  background-color: #3b82f6;
  color: #ffffff;
  border: none;
}

.action-icon {
  margin-bottom: 8rpx;
  color: #f1f5f9;
}

.action-icon.clapperboard {
  color: #34d399;
}

.action-icon.paper-plane {
  color: #fbbf24;
}

.action-text {
  font-size: 26rpx;
}

/* 信息部分 */
.info-section {
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 28rpx;
  color: #94a3b8;
}

.edit-button {
  display: flex;
  align-items: center;
  space-x: 4rpx;
  background: none;
  border: none;
  font-size: 26rpx;
  color: #94a3b8;
}

.edit-icon {
  color: #94a3b8;
}

.info-card {
  padding: 20rpx 24rpx;
  border-radius: 32rpx;
  background-color: rgba(15, 23, 42, 0.8);
  border: 1px solid #1e293b;
  font-size: 26rpx;
}

.info-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.info-row.column {
  flex-direction: column;
  align-items: flex-start;
}

.info-label {
  color: #64748b;
}

.info-value {
  color: #f1f5f9;
  text-align: right;
}

/* 素材部分 */
.material-section {
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.manage-button {
  display: flex;
  align-items: center;
  gap: 4rpx;
  background: none;
  border: none;
  font-size: 26rpx;
  color: #60a5fa;
}

.manage-icon {
  color: #60a5fa;
}

.material-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
}

/* 成片部分 */
.clips-section {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.new-button {
  display: flex;
  align-items: center;
  gap: 4rpx;
  background: none;
  border: none;
  font-size: 26rpx;
  color: #60a5fa;
}

.new-icon {
  color: #60a5fa;
}

.clips-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}