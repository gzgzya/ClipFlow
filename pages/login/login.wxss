/* 登录页面样式 */
.container {
  width: 100%;
  min-height: 100vh;
  background-color: #0f172a;
  display: flex;
  flex-direction: column;
}

/* 内容区域 */
.content {
  flex: 1;
  position: relative;
  background-color: #0f172a;
  color: #f1f5f9;
  overflow: hidden;
}

/* 品牌区域 */
.brand-section {
  height: 320rpx; /* 160px -> 320rpx */
  position: relative;
}

.brand-image {
  width: 100%;
  height: 100%;
}

.brand-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, #000000, rgba(0, 0, 0, 0.7), #0f172a);
}

.brand-content {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding: 0 40rpx; /* 20px -> 40rpx */
}

.brand-tag {
  display: inline-flex;
  align-items: center;
  padding: 16rpx 32rpx; /* 8px 16px -> 16rpx 32rpx */
  border-radius: 32rpx; /* 16px -> 32rpx */
  background-color: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  font-size: 24rpx; /* 增大字体 10px -> 20rpx -> 24rpx */
  color: #cbd5e1;
  margin-bottom: 16rpx; /* 8px -> 16rpx */
}

.tag-icon {
  margin-right: 16rpx; /* 8px -> 16rpx */
  color: #6ee7b7;
  font-size: 24rpx; /* 增大字体 10px -> 20rpx -> 24rpx */
}

.brand-name {
  font-size: 48rpx; /* 增大字体 21px -> 42rpx -> 48rpx */
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 2rpx;
  margin-bottom: 16rpx; /* 8px -> 16rpx */
}

.brand-desc {
  font-size: 26rpx; /* 增大字体 11px -> 22rpx -> 26rpx */
  color: #cbd5e1;
  margin-top: 16rpx; /* 8px -> 16rpx */
  line-height: 1.5;
}

/* 登录卡片 */
.login-card {
  position: absolute;
  left: 32rpx; /* 16px -> 32rpx */
  right: 32rpx; /* 16px -> 32rpx */
  top: 320rpx; /* 160px -> 320rpx */
  border-radius: 48rpx; /* 24px -> 48rpx (rounded-3xl) */
  background-color: rgba(15, 23, 42, 0.95); /* bg-slate-900/95 */
  border: 1px solid #1e293b; /* border-slate-800 */
  padding: 32rpx 32rpx 32rpx; /* 16px -> 32rpx */
  box-shadow: 0 -20px 40px rgba(15, 23, 42, 0.9); /* shadow-[0_-20px_40px_rgba(15,23,42,0.9)] */
  overflow-y: auto;
}

/* 微信登录 */
.wechat-login {
  margin-bottom: 24rpx; /* 12px -> 24rpx (mb-3) */
}

.wechat-btn {
  width: 100%;
  padding: 24rpx; /* py-2.5 (~10px) -> 24rpx */
  border-radius: 40rpx; /* 20px -> 40rpx (rounded-2xl) */
  background-color: #10b981; /* bg-emerald-500 */
  color: #ffffff;
  font-size: 28rpx; /* 14px -> 28rpx (text-sm) */
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx; /* 8px -> 16rpx (space-x-2) */
  box-shadow: 0 10px 20px rgba(16, 185, 129, 0.4); /* shadow-lg shadow-emerald-500/40 */
}

.wechat-icon {
  font-size: 36rpx; /* 18px -> 36rpx (text-lg) */
  color: #ffffff;
}

.wechat-text {
  /* 文字样式已在按钮中设置 */
}

.wechat-desc {
  margin-top: 16rpx; /* 8px -> 16rpx (mt-1) */
  font-size: 20rpx; /* 10px -> 20rpx */
  color: #64748b; /* text-slate-500 */
  text-align: center;
  line-height: 1.5;
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 24rpx 0; /* my-3 (12px) -> 24rpx */
}

.divider-line-left,
.divider-line-right {
  flex: 1;
  height: 1px;
  background-color: #1e293b; /* bg-slate-800 */
}

.divider-text {
  padding: 0 16rpx; /* px-2 (8px) -> 16rpx */
  font-size: 20rpx; /* 10px -> 20rpx */
  color: #64748b; /* text-slate-500 */
}

/* 输入组 */
.input-group {
  margin-bottom: 48rpx; /* 24px -> 48rpx (space-y-3) */
}

.input-label {
  display: block;
  margin-bottom: 16rpx; /* mb-1 (4px) -> 16rpx */
  color: #94a3b8; /* text-slate-400 */
  font-size: 26rpx; /* 增大字体 11px -> 22rpx -> 26rpx */
}

.phone-input-wrapper {
  display: flex;
  align-items: center;
  border-radius: 32rpx; /* 16px -> 32rpx (rounded-2xl) */
  background-color: #0f172a; /* bg-slate-950 */
  border: 1px solid #334155; /* border-slate-700 */
  padding: 0 24rpx; /* px-3 (12px) -> 24rpx */
  padding-top: 16rpx; /* py-2 (8px) -> 16rpx */
  padding-bottom: 16rpx; /* py-2 (8px) -> 16rpx */
}

.country-code {
  font-size: 26rpx; /* 增大字体 11px -> 22rpx -> 26rpx */
  color: #94a3b8; /* text-slate-400 */
  margin-right: 16rpx; /* mr-2 (8px) -> 16rpx */
}

.phone-input {
  flex: 1;
  background-color: transparent;
  outline: none;
  font-size: 28rpx; /* 增大字体 12px -> 24rpx -> 28rpx */
  color: #f1f5f9;
  padding: 16rpx 0; /* py-2 (8px) -> 16rpx */
}

.captcha-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx; /* space-x-2 (8px) -> 16rpx */
}

.captcha-input-wrapper {
  flex: 1;
  border-radius: 32rpx; /* 16px -> 32rpx (rounded-2xl) */
  background-color: #0f172a; /* bg-slate-950 */
  border: 1px solid #334155; /* border-slate-700 */
  padding: 0 24rpx; /* px-3 (12px) -> 24rpx */
  padding-top: 16rpx; /* py-2 (8px) -> 16rpx */
  padding-bottom: 16rpx; /* py-2 (8px) -> 16rpx */
}

.captcha-input {
  width: 100%;
  background-color: transparent;
  outline: none;
  font-size: 28rpx; /* 增大字体 12px -> 24rpx -> 28rpx */
  color: #f1f5f9;
  padding: 16rpx 0; /* py-2 (8px) -> 16rpx */
}

.captcha-btn {
  padding: 16rpx 8rpx; /* 缩短按钮宽度，减少左右padding */
  border-radius: 32rpx; /* 16px -> 32rpx (rounded-2xl) */
  background-color: #1e293b; /* bg-slate-800 */
  color: #f1f5f9; /* text-slate-100 */
  font-size: 26rpx; /* 增大字体 11px -> 22rpx -> 26rpx */
  border: 1px solid #475569; /* border-slate-600 */
  white-space: nowrap;
  flex: 0 0 140rpx; /* 固定按钮宽度，让输入框占据更多空间 */
  text-align: center;
}

.captcha-desc {
  margin-top: 16rpx; /* mt-1 (4px) -> 16rpx */
  font-size: 20rpx; /* 10px -> 20rpx */
  color: #64748b; /* text-slate-500 */
  line-height: 1.5;
}

/* 角色选择 */
.role-section {
  margin-bottom: 48rpx; /* 24px -> 48rpx (space-y-3) */
}

.role-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx; /* mb-1 (4px) -> 16rpx */
}

.role-label {
  color: #94a3b8; /* text-slate-400 */
  font-size: 26rpx; /* 增大字体 11px -> 22rpx -> 26rpx */
}

.role-desc {
  font-size: 24rpx; /* 增大字体 10px -> 20rpx -> 24rpx */
  color: #64748b; /* text-slate-500 */
}

.role-options {
  display: flex;
  justify-content: space-between;
  gap: 16rpx; /* 8px -> 16rpx (gap-2) */
}

.role-btn {
  flex: 1;
  padding: 16rpx 8rpx; /* 减小左右padding，原来是32rpx */
  border-radius: 32rpx; /* 16px -> 32rpx (rounded-2xl) */
  background-color: #1e293b; /* bg-slate-800 */
  color: #f1f5f9; /* text-slate-100 */
  font-size: 24rpx; /* 增大字体 10px -> 20rpx -> 24rpx */
  border: 1px solid #475569; /* border-slate-600 */
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.role-btn.active {
  background-color: #3b82f6; /* bg-blue-600 */
  color: #ffffff;
}

/* 协议 */
.agreement {
  display: flex;
  align-items: center; /* 改为居中对齐 */
  gap: 16rpx; /* space-x-2 (8px) -> 16rpx */
  margin-bottom: 16rpx; /* pt-1 (4px) -> 16rpx */
  line-height: 1.5;
}

.agreement-checkbox {
  margin-top: 0; /* 移除顶部边距 */
  transform: scale(0.8);
  width: 32rpx; /* 设置固定宽度 */
  height: 32rpx; /* 设置固定高度 */
}

.agreement-text-container {
  flex: 1;
  font-size: 24rpx; /* 增大字体 10px -> 20rpx -> 24rpx */
  color: #64748b; /* text-slate-500 */
  display: flex; /* 使用flex布局 */
  flex-wrap: wrap; /* 允许换行 */
  align-items: center; /* 垂直居中 */
  gap: 8rpx; /* 元素之间的间距 */
}

.agreement-text {
  font-size: 24rpx; /* 增大字体 10px -> 20rpx -> 24rpx */
  color: #64748b; /* text-slate-500 */
  line-height: 32rpx; /* 与勾选框高度一致 */
}

.agreement-link {
  color: #60a5fa; /* text-blue-400 */
  font-size: 24rpx; /* 增大字体 10px -> 20rpx -> 24rpx */
  line-height: 32rpx; /* 与勾选框高度一致 */
}

/* 登录操作 */
.login-action {
  /* 间距已在 .input-group 中设置 */
  margin-top: 16rpx; /* pt-1 (4px) -> 16rpx */
}

.login-btn {
  width: 100%;
  text-align: center;
  padding: 24rpx; /* py-2.5 (~10px) -> 24rpx */
  border-radius: 40rpx; /* 20px -> 40rpx (rounded-2xl) */
  background-color: #3b82f6; /* bg-blue-600 */
  color: #ffffff;
  font-size: 32rpx; /* 增大字体 14px -> 28rpx -> 32rpx */
  font-weight: 500;
  box-shadow: 0 10px 20px rgba(59, 130, 246, 0.4); /* shadow-lg shadow-blue-600/40 */
  margin-bottom: 16rpx; /* 8px -> 16rpx (mt-1) */
}

.login-btn.disabled {
  background-color: #64748b; /* 禁用状态的背景色 */
  box-shadow: none; /* 移除阴影 */
  opacity: 0.6; /* 降低透明度 */
}

/* 底部 */
.footer {
  margin-top: 24rpx; /* mt-3 (12px) -> 24rpx */
  padding: 0 32rpx; /* 16px -> 32rpx */
}

.footer-text {
  font-size: 24rpx; /* 增大字体 10px -> 20rpx -> 24rpx */
  color: #64748b; /* text-slate-500 */
  text-align: center;
  line-height: 1.5;
}