/* 成片中心页面样式 */
.container {
  background-color: #020617; /* bg-slate-950 */
  height: 100vh;
  display: flex;
  flex-direction: column;
  position: relative;
}

/* 返回按钮容器 */
.back-button-container {
  position: absolute;
  top: 24rpx;
  left: 32rpx;
  z-index: 100;
}

.back-button {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: rgba(15, 23, 42, 0.9); /* bg-slate-900/90 */
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid rgba(100, 116, 139, 0.8); /* border-slate-700/80 */
}

.back-icon {
  color: #f1f5f9; /* text-slate-100 */
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #020617; /* bg-slate-950 */
  padding-bottom: 48rpx; /* 减少底部padding，因为移除了底部TabBar */
}

/* 搜索区域 */
.search-section {
  padding: 24rpx 32rpx 16rpx;
  font-size: 22rpx; /* text-[11px] */
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.search-container {
  position: relative;
  flex: 1;
  display: flex;
  align-items: center;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  color: #94a3b8; /* text-slate-400 */
  z-index: 1;
}

.search-input {
  flex: 1;
  padding: 16rpx 32rpx 16rpx 72rpx;
  border-radius: 40rpx; /* rounded-2xl */
  background-color: rgba(15, 23, 42, 0.9); /* bg-slate-900/90 */
  font-size: 24rpx; /* text-xs */
  color: #f1f5f9; /* text-slate-100 */
  border: 1rpx solid rgba(100, 116, 139, 0.8); /* border-slate-700/80 */
}

.search-input::placeholder {
  color: #94a3b8; /* text-slate-500 */
}

.filter-button {
  padding: 12rpx 24rpx;
  border-radius: 40rpx; /* rounded-2xl */
  background-color: rgba(15, 23, 42, 0.9); /* bg-slate-900/90 */
  font-size: 24rpx; /* text-xs */
  color: #f1f5f9; /* text-slate-100 */
  display: flex;
  align-items: center;
  gap: 8rpx;
  border: 1rpx solid rgba(100, 116, 139, 0.8); /* border-slate-700/80 */
}

.filter-icon {
  color: #94a3b8; /* text-slate-400 */
}

/* 状态标签 */
.tabs-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tabs-container {
  display: flex;
  gap: 8rpx;
}

.tab-item {
  padding: 12rpx 24rpx;
  border-radius: 40rpx; /* rounded-2xl */
  font-size: 24rpx; /* text-xs */
  background-color: #1e293b; /* bg-slate-900 */
  color: #f1f5f9; /* text-slate-100 */
  border: none;
}

.tab-item.active {
  background-color: #3b82f6; /* bg-blue-600 */
  color: white;
}

.sort-button {
  padding: 12rpx 16rpx;
  border-radius: 40rpx; /* rounded-2xl */
  background-color: #1e293b; /* bg-slate-900 */
  font-size: 20rpx; /* text-[10px] */
  color: #f1f5f9; /* text-slate-100 */
  display: flex;
  align-items: center;
  gap: 4rpx;
  border: 1rpx solid #334155; /* border-slate-800 */
}

.sort-icon {
  color: #94a3b8; /* text-slate-400 */
}

/* 平台筛选 */
.platform-chips {
  display: flex;
  align-items: center;
  gap: 16rpx; /* space-x-2 */
  color: #94a3b8; /* text-slate-400 */
  font-size: 20rpx; /* text-[10px] */
}

.chips-label {
  flex-shrink: 0;
  color: #64748b; /* text-slate-500 */
}

.chip-item {
  padding: 8rpx 16rpx;
  border-radius: 32rpx; /* rounded-full */
  background-color: #1e293b; /* bg-slate-900 */
  display: flex;
  align-items: center;
  gap: 4rpx;
  border: 1rpx solid rgba(100, 116, 139, 0.8); /* border-slate-700/80 */
  color: #f1f5f9; /* text-slate-100 */
  font-size: 20rpx; /* text-[10px] */
}

.chip-item.active {
  border-color: #3b82f6; /* bg-blue-600 */
}

.douyin {
  color: #fff;
}

.kuaishou {
  color: #f97316; /* text-orange-400 */
}

.weixin {
  color: #10b981; /* text-emerald-400 */
}

.xiaohongshu {
  color: #ef4444; /* text-red-400 */
}

/* 成片列表 */
.clips-list {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

/* 成片卡片 */
.clip-card {
  border-radius: 16rpx; /* rounded-2xl */
  background-color: rgba(15, 23, 42, 0.9); /* bg-slate-900/90 */
  border: 1rpx solid #334155; /* border-slate-800 */
  overflow: hidden;
}

.clip-card-main {
  display: flex;
}

/* 封面 */
.clip-cover-container {
  width: 224rpx; /* w-28 * 8 */
  height: 192rpx; /* h-24 * 8 */
  position: relative;
}

.clip-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.7) 0%, transparent 50%, rgba(0, 0, 0, 0.3) 100%);
}

.play-button {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-icon {
  color: #fff;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.duration-tag {
  position: absolute;
  bottom: 8rpx; /* bottom-1 * 8 */
  left: 8rpx; /* left-1 * 8 */
  font-size: 20rpx; /* text-[10px] */
  padding: 4rpx 12rpx; /* px-1.5 py-0.5 */
  border-radius: 32rpx; /* rounded-full */
  background-color: rgba(0, 0, 0, 0.8);
  color: #fff;
}

.template-tag {
  position: absolute;
  top: 8rpx; /* top-1 * 8 */
  left: 8rpx; /* left-1 * 8 */
  font-size: 20rpx; /* text-[10px] */
  padding: 4rpx 12rpx; /* px-1.5 py-0.5 */
  border-radius: 32rpx; /* rounded-full */
  color: #fff;
}

.template-tag.standard {
  background-color: #3b82f6; /* bg-blue-600 */
}

.template-tag.interior {
  background-color: #10b981; /* bg-emerald-500 */
}

.template-tag.highlight {
  background-color: #f59e0b; /* bg-amber-500 */
}

/* 信息区域 */
.clip-info {
  flex: 1;
  padding: 16rpx 24rpx; /* px-3 py-2 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.clip-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16rpx;
}

.clip-title {
  font-size: 22rpx; /* text-[11px] */
  color: #f1f5f9; /* text-slate-100 */
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.clip-time {
  font-size: 20rpx; /* text-[10px] */
  color: #94a3b8; /* text-slate-500 */
}

.clip-description {
  font-size: 20rpx; /* text-[10px] */
  color: #94a3b8; /* text-slate-400 */
  margin-top: 4rpx; /* mt-0.5 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.clip-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 8rpx; /* mt-1 */
}

.clip-meta {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.status-tag {
  font-size: 20rpx; /* text-[10px] */
  padding: 4rpx 12rpx; /* px-1.5 py-0.5 */
  border-radius: 32rpx; /* rounded-full */
  border: 1rpx solid;
}

.status-tag.published {
  background-color: rgba(16, 185, 129, 0.15); /* bg-emerald-500/15 */
  color: #6ee7b7; /* text-emerald-300 */
  border-color: rgba(16, 185, 129, 0.4); /* border-emerald-400/40 */
}

.status-tag.pending {
  color: #fbbf24; /* text-amber-400 */
}

.status-tag.failed {
  color: #f87171; /* text-red-400 */
}

.vehicle-info {
  display: flex;
  align-items: center;
  gap: 4rpx;
  font-size: 20rpx; /* text-[10px] */
  color: #94a3b8; /* text-slate-500 */
}

.vehicle-icon {
  color: #60a5fa; /* text-blue-400 */
}

.clip-actions {
  display: flex;
  align-items: center;
  gap: 8rpx; /* space-x-1 */
}

.action-button {
  font-size: 20rpx; /* text-[10px] */
  padding: 4rpx 12rpx; /* px-2 py-0.5 或 px-2.5 py-0.5 */
  border-radius: 32rpx; /* rounded-full */
  border: none;
}

.action-button.copy {
  padding: 4rpx 12rpx; /* px-2 py-0.5 */
  background-color: #1e293b; /* bg-slate-800 */
  color: #f1f5f9; /* text-slate-100 */
}

.action-button.publish, .action-button.distribute {
  padding: 4rpx 12rpx; /* px-2.5 py-0.5 */
  background-color: #3b82f6; /* bg-blue-600 */
  color: #fff; /* text-white */
}

.action-button.retry {
  padding: 4rpx 12rpx; /* px-2.5 py-0.5 */
  background-color: rgba(245, 158, 11, 0.15); /* bg-amber-500/15 */
  color: #fcd34d; /* text-amber-300 */
  border: 1rpx solid rgba(245, 158, 11, 0.4); /* border-amber-400/40 */
}

/* 平台状态条 */
.platform-status-bar {
  padding: 12rpx 24rpx; /* px-3 py-1.5 */
  border-top: 1rpx solid #334155; /* border-slate-800 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 20rpx; /* text-[10px] */
  color: #94a3b8; /* text-slate-400 */
}

.platform-status-left, .platform-status-right {
  display: flex;
  align-items: center;
  gap: 16rpx; /* space-x-2 */
}

.platform-status-item {
  display: flex;
  align-items: center;
  gap: 4rpx; /* space-x-1 */
}

.platform-icon {
  font-size: 20rpx;
}

.platform-status-item .published {
  color: #6ee7b7; /* text-emerald-300 */
}

.platform-status-item .pending {
  color: #fbbf24; /* text-amber-400 */
}

.platform-status-item .failed {
  color: #f87171; /* text-red-400 */
}

.platform-status-item .unconfigured {
  color: #94a3b8; /* text-slate-500 */
}

/* 底部提示 */
.footer-tip {
  padding: 16rpx;
  border-radius: 16rpx; /* rounded-2xl */
  background-color: rgba(30, 41, 59, 0.6); /* bg-slate-900/60 */
  border: 1rpx dashed #475569; /* border-dashed border-slate-700 */
  font-size: 22rpx; /* text-[11px] */
  color: #94a3b8; /* text-slate-500 */
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.tip-icon {
  color: #94a3b8; /* text-slate-500 */
}