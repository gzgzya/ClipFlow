/* 我的页面样式 */
.container {
  background-color: #0f172a;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 顶部导航中的帮助按钮 */
.help-button {
  font-size: 14rpx;
  color: #94a3b8;
  background: none;
  border: none;
  padding: 0;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #020617;
  padding-bottom: 128rpx;
}

/* 用户信息 */
.user-section {
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.avatar-container {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid #3b82f6;
  overflow: hidden;
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.user-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 16rpx;
  color: #f1f5f9;
  font-weight: 600;
}

.store-info {
  font-size: 14rpx;
  color: #94a3b8;
}

.switch-button {
  font-size: 13rpx;
  color: #e2e8f0;
  background-color: #1e293b;
  border: 1rpx solid #475569;
  border-radius: 16rpx;
  padding: 12rpx 24rpx;
}

/* 数据概览 */
.stats-section {
  padding: 0 32rpx 24rpx;
}

.stats-grid {
  display: flex;
  gap: 16rpx;
}

.stat-item {
  flex: 1;
  background-color: #1e293b;
  border: 1rpx solid #334155;
  border-radius: 16rpx;
  padding: 24rpx;
}

.stat-title {
  font-size: 13rpx;
  color: #94a3b8;
}

.stat-value-container {
  display: flex;
  align-items: flex-end;
  margin: 8rpx 0;
}

.stat-value {
  font-size: 28rpx;
  color: #f1f5f9;
  font-weight: 600;
}

.stat-unit {
  font-size: 16rpx;
  color: #f1f5f9;
  font-weight: 600;
  margin-left: 4rpx;
  padding-bottom: 2rpx;
}

.stat-change {
  font-size: 12rpx;
  color: #34d399;
}

.stat-desc {
  font-size: 12rpx;
  color: #94a3b8;
  margin-top: 4rpx;
}

/* 设置列表 */
.settings-section {
  padding: 0 32rpx;
  margin-bottom: 24rpx;
}

.settings-group {
  background-color: #1e293b;
  border: 1rpx solid #334155;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.group-title {
  font-size: 13rpx;
  color: #94a3b8;
  padding: 16rpx 24rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 24rpx;
  border-top: 1rpx solid rgba(51, 65, 85, 0.8);
  background: none;
  border: none;
  width: 100%;
  text-align: left;
}

.item-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.item-icon {
  color: #cbd5e1;
}

.item-text {
  font-size: 14rpx;
  color: #f1f5f9;
}

.arrow-icon {
  color: #64748b;
}

/* 退出登录 */
.logout-section {
  padding: 0 32rpx 32rpx;
}

.logout-button {
  width: 100%;
  padding: 20rpx;
  border-radius: 16rpx;
  background: none;
  border: 1rpx solid rgba(239, 68, 68, 0.5);
  color: #f87171;
  font-size: 14rpx;
}

/* 底部导航栏 */
.tab-bar {
  height: 128rpx;
  background-color: rgba(0, 0, 0, 0.95);
  border-top: 1rpx solid #334155;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 13rpx;
  color: #94a3b8;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  padding: 0;
}

.tab-item.active {
  color: #3b82f6;
}

.tab-icon {
  margin-bottom: 8rpx;
}