/* 新增/编辑车辆页面样式 */
.container {
  width: 100%;
  height: 100vh;
  background-color: #0f172a;
  display: flex;
  flex-direction: column;
}

/* 状态栏 */
.status-bar {
  height: 40rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #f1f5f9;
  background-color: rgba(0, 0, 0, 0.8);
}

.status-text {
  font-weight: 600;
}

.status-icons {
  display: flex;
  align-items: center;
}

.status-icon {
  margin-left: 8rpx;
}

/* 顶部导航 */
.nav-bar {
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(to right, #0f172a, #1e293b);
  color: #f1f5f9;
}

.back-button {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: rgba(30, 41, 59, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  color: #f1f5f9;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
}

.save-button {
  font-size: 28rpx;
  color: #60a5fa;
  background: none;
  border: none;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #0f172a;
  padding: 0 32rpx;
}

.form {
  padding-top: 24rpx;
  padding-bottom: 32rpx;
}

.form-section {
  margin-bottom: 24rpx;
}

.form-row {
  display: flex;
  align-items: center;
}

.form-col {
  /* 基础样式 */
}

.ml-2 {
  margin-left: 16rpx;
}

.flex-1 {
  flex: 1;
}

.w-24 {
  width: 192rpx;
}

.form-label {
  display: block;
  margin-bottom: 8rpx;
  color: #94a3b8;
  font-size: 28rpx;
}

.form-sublabel {
  font-size: 26rpx;
  color: #64748b;
}

.form-input {
  width: 100%;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  background-color: #0f172a;
  border: 1px solid #334155;
  font-size: 28rpx;
  color: #f1f5f9;
}

.form-input::placeholder {
  color: #94a3b8;
}

.form-picker {
  width: 100%;
}

.picker-display {
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  background-color: #0f172a;
  border: 1px solid #334155;
  font-size: 28rpx;
  color: #f1f5f9;
}

.form-textarea {
  width: 100%;
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  background-color: #0f172a;
  border: 1px solid #334155;
  font-size: 28rpx;
  color: #f1f5f9;
  height: 120rpx;
  resize: none;
}

.form-textarea.short {
  height: 80rpx;
}

.form-textarea::placeholder {
  color: #94a3b8;
}

.form-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

/* 照片网格 */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
}

.photo-item {
  position: relative;
  border-radius: 32rpx;
  overflow: hidden;
  height: 128rpx;
  background-color: rgba(15, 23, 42, 0.6);
  border: 1px solid rgba(100, 116, 139, 0.7);
}

.photo-image {
  width: 100%;
  height: 100%;
}

.cover-tag {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 16rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #ffffff;
}

.photo-add {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(15, 23, 42, 0.6);
  border: 1px dashed #475569;
  border-radius: 32rpx;
}

.add-icon {
  color: #94a3b8;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 26rpx;
  color: #94a3b8;
}

/* 模板卡片 */
.template-card {
  padding: 16rpx 24rpx;
  border-radius: 32rpx;
  background-color: #0f172a;
  border: 1px solid #334155;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.template-info {
  display: flex;
  flex-direction: column;
}

.template-name {
  font-size: 28rpx;
  color: #f1f5f9;
  margin-bottom: 8rpx;
}

.template-desc {
  font-size: 24rpx;
  color: #64748b;
}

.template-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
  background-color: rgba(16, 185, 129, 0.15);
  color: #34d399;
  border: 1px solid rgba(16, 185, 129, 0.4);
}

.template-link {
  font-size: 26rpx;
  color: #60a5fa;
}

/* CTA 按钮 */
.cta-section {
  padding-top: 16rpx;
  padding-bottom: 32rpx;
}

.cta-button {
  width: 100%;
  padding: 24rpx;
  border-radius: 32rpx;
  background-color: #3b82f6;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
  border: none;
}