/* 新增/编辑车辆页面样式 */
.container {
  width: 100%;
  height: 100vh;
  background-color: #020617; /* bg-slate-950 */
  display: flex;
  flex-direction: column;
}

/* 状态栏 */
.status-bar {
  height: 40rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  color: #f1f5f9;
  background-color: rgba(0, 0, 0, 0.8);
}

.status-text {
  font-weight: 600;
}

.status-icons {
  display: flex;
  align-items: center;
}

.status-icon {
  margin-left: 8rpx;
}

/* 顶部导航 */
.nav-bar {
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(to right, #0f172a, #1e293b);
  color: #f1f5f9;
}

.back-button {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: rgba(30, 41, 59, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  color: #f1f5f9;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 600;
}

.save-button {
  font-size: 28rpx;
  color: #60a5fa;
  background: none;
  border: none;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #020617; /* bg-slate-950 */
  padding: 0 12rpx; /* 减小内边距以提供更多空间给表单元素 */
}

.form {
  padding-top: 24rpx;
  padding-bottom: 32rpx;
  /* 移除padding-right以避免影响布局 */
}

.form-section {
  margin-bottom: 24rpx;
  padding-right: 12rpx; /* 添加右侧内边距以确保文本域右侧对齐 */
}

.form-section:nth-last-child(4),
.form-section:nth-last-child(3) {
  /* 移除复杂的选择器 */
}

.form-row {
  display: flex;
  align-items: center;
  gap: 8rpx; /* 减小间距以提供更多空间给表单元素 */
}

.w-24 {
  width: 120rpx; /* 减小宽度以提供更多空间给表单元素 */
}

.form-label {
  display: block;
  margin-bottom: 8rpx;
  color: #94a3b8; /* text-slate-400 */
  font-size: 28rpx; /* 与首页搜索框字体大小保持一致 */
}

.form-sublabel {
  font-size: 22rpx; /* text-[11px] */
  color: #64748b; /* text-slate-500 */
}

.form-input {
  width: 100%;
  height: 72rpx; /* 与首页搜索框高度保持一致 */
  padding: 0 24rpx; /* 调整padding以匹配首页搜索框 */
  border-radius: 40rpx; /* rounded-2xl */
  background-color: #1e293b; /* bg-slate-900 */
  border: 1px solid #475569; /* border-slate-700 */
  font-size: 28rpx; /* 与首页搜索框字体大小保持一致 */
  color: #f1f5f9; /* text-slate-100 */
  box-sizing: border-box; /* 确保padding包含在width内 */
}

.form-input::placeholder {
  color: #94a3b8; /* text-slate-500 */
}

.form-picker {
  width: 100%;
}

.picker-display {
  width: 100%;
  height: 72rpx; /* 与首页搜索框高度保持一致 */
  padding: 0 24rpx; /* 调整padding以匹配首页搜索框 */
  border-radius: 40rpx; /* rounded-2xl */
  background-color: #1e293b; /* bg-slate-900 */
  border: 1px solid #475569; /* border-slate-700 */
  font-size: 28rpx; /* 与首页搜索框字体大小保持一致 */
  color: #f1f5f9; /* text-slate-100 */
  box-sizing: border-box; /* 确保padding包含在width内 */
  display: flex;
  align-items: center;
}

.form-textarea {
  width: 100%;
  padding: 16rpx 24rpx;
  border-radius: 40rpx; /* rounded-2xl */
  background-color: #1e293b; /* bg-slate-900 */
  border: 1px solid #475569; /* border-slate-700 */
  font-size: 28rpx; /* 与首页搜索框字体大小保持一致 */
  color: #f1f5f9; /* text-slate-100 */
  height: 120rpx;
  resize: none;
  box-sizing: border-box; /* 确保padding包含在width内 */
  /* 移除margin以避免影响对齐 */
}

.form-section:last-child {
  padding-right: 0; /* 移除最后一部分的右侧内边距 */
}

.form-textarea.short {
  height: 80rpx;
  width: calc(100% - 20rpx); /* 适当缩短宽度 */
}

.form-textarea::placeholder {
  color: #94a3b8; /* text-slate-500 */
}

.form-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

/* 照片网格 */
.photo-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx; /* gap-2 */
}

.photo-item {
  position: relative;
  border-radius: 16rpx; /* rounded-2xl */
  overflow: hidden;
  height: 128rpx;
  background-color: rgba(15, 23, 42, 0.6); /* bg-slate-900/60 */
  border: 1px solid rgba(100, 116, 139, 0.7); /* border-slate-700/70 */
}

.photo-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cover-tag {
  position: absolute;
  top: 8rpx; /* top-1 * 8 */
  left: 8rpx; /* left-1 * 8 */
  font-size: 20rpx; /* text-[10px] */
  padding: 4rpx 8rpx; /* px-1.5 py-0.5 */
  border-radius: 16rpx; /* rounded-full */
  background-color: rgba(0, 0, 0, 0.7); /* bg-black/70 */
  color: #ffffff;
}

.photo-add {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(15, 23, 42, 0.6); /* bg-slate-900/60 */
  border: 1px dashed #475569; /* border-dashed border-slate-600 */
  border-radius: 16rpx; /* rounded-2xl */
}

.add-icon {
  color: #94a3b8; /* text-slate-400 */
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 22rpx; /* text-[11px] */
  color: #94a3b8; /* text-slate-400 */
}

/* 模板卡片 */
.template-card {
  padding: 16rpx 24rpx; /* px-3 py-2 */
  border-radius: 16rpx; /* rounded-2xl */
  background-color: #1e293b; /* bg-slate-900 */
  border: 1px solid #475569; /* border-slate-700 */
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.template-info {
  display: flex;
  flex-direction: column;
}

.template-name {
  font-size: 24rpx; /* text-[12px] */
  color: #f1f5f9; /* text-slate-100 */
  margin-bottom: 8rpx;
}

.template-desc {
  font-size: 22rpx; /* text-[11px] */
  color: #64748b; /* text-slate-500 */
}

.template-tag {
  font-size: 20rpx; /* text-[10px] */
  padding: 4rpx 16rpx; /* px-2 py-0.5 */
  border-radius: 32rpx; /* rounded-full */
  background-color: rgba(16, 185, 129, 0.15); /* bg-emerald-500/15 */
  color: #6ee7b7; /* text-emerald-300 */
  border: 1px solid rgba(16, 185, 129, 0.4); /* border-emerald-400/40 */
}

.template-link {
  font-size: 22rpx; /* text-[11px] */
  color: #60a5fa; /* text-blue-400 */
}

/* CTA 按钮 */
.cta-section {
  padding-top: 16rpx;
  padding-bottom: 32rpx;
}

.cta-button {
  width: 100%;
  padding: 20rpx; /* py-2.5 */
  border-radius: 40rpx; /* rounded-2xl (changed from 16rpx to match design) */
  background-color: #3b82f6; /* bg-blue-600 */
  color: #ffffff;
  font-size: 28rpx; /* text-sm */
  font-weight: 500;
  box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3); /* shadow-lg shadow-blue-600/30 */
  border: none;
}

/* 文本域部分 */
.textarea-section {
  padding-right: 12rpx; /* 添加右侧内边距以确保文本域右侧对齐 */
}

/* 卖点亮点和推荐话术文本域 */
.form-textarea {
  width: calc(100% - 20rpx); /* 适当缩短宽度 */
}
