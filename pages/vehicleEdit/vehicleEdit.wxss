 /* 新增/编辑车辆页面样式 */
.container {
  width: 100%;
  height: 100vh;
  background-color: #020617; /* bg-slate-950 */
  display: flex;
  flex-direction: column;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #020617; /* bg-slate-950 */
  padding: 0 32rpx; /* 与主页保持一致的左右内边距 */
  box-sizing: border-box;
}

/* 显式的间距视图 */
.form-spacing {
  height: 24rpx;
}

.form {
  /* 移除padding-top，改用显式的间距视图 */
  padding-bottom: 32rpx;
  box-sizing: border-box;
}

.form-section {
  margin-bottom: 24rpx;
  padding: 0; /* 移除内边距，使用容器的内边距 */
  box-sizing: border-box;
}

.form-section:last-child {
  padding: 0; /* 移除内边距，使用容器的内边距 */
}

.form-row {
  display: flex;
  align-items: center;
  gap: 8rpx; /* 减小间距以提供更多空间给表单元素 */
  box-sizing: border-box;
}

.w-24 {
  width: 120rpx; /* 减小宽度以提供更多空间给表单元素 */
}

.form-label {
  display: block;
  margin-bottom: 8rpx;
  color: #94a3b8; /* text-slate-400 */
  font-size: 28rpx; /* 与首页搜索框字体大小保持一致 */
}

.form-sublabel {
  font-size: 22rpx; /* text-[11px] */
  color: #64748b; /* text-slate-500 */
}

.form-input {
  width: 100%;
  height: 72rpx; /* 与首页搜索框高度保持一致 */
  padding: 0 24rpx; /* 调整padding以匹配首页搜索框 */
  border-radius: 40rpx; /* rounded-2xl */
  background-color: #1e293b; /* bg-slate-900 */
  border: 1px solid #475569; /* border-slate-700 */
  font-size: 28rpx; /* 与首页搜索框字体大小保持一致 */
  color: #f1f5f9; /* text-slate-100 */
  box-sizing: border-box; /* 确保padding包含在width内 */
}

.form-input::placeholder {
  color: #94a3b8; /* text-slate-500 */
}

.form-picker {
  width: 100%;
}

.picker-display {
  width: 100%;
  height: 72rpx; /* 与首页搜索框高度保持一致 */
  padding: 0 24rpx; /* 调整padding以匹配首页搜索框 */
  border-radius: 40rpx; /* rounded-2xl */
  background-color: #1e293b; /* bg-slate-900 */
  border: 1px solid #475569; /* border-slate-700 */
  font-size: 28rpx; /* 与首页搜索框字体大小保持一致 */
  color: #f1f5f9; /* text-slate-100 */
  box-sizing: border-box; /* 确保padding包含在width内 */
  display: flex;
  align-items: center;
}

.form-textarea {
  width: 100%; /* 使用完整的宽度 */
  padding: 16rpx 24rpx;
  border-radius: 40rpx; /* rounded-2xl */
  background-color: #1e293b; /* bg-slate-900 */
  border: 1px solid #475569; /* border-slate-700 */
  font-size: 28rpx; /* 与首页搜索框字体大小保持一致 */
  color: #f1f5f9; /* text-slate-100 */
  height: 120rpx;
  resize: none;
  box-sizing: border-box; /* 确保padding包含在width内 */
  /* 移除margin以避免影响对齐 */
}

.form-textarea.short {
  height: 80rpx;
  width: calc(100% - 20rpx); /* 适当缩短宽度 */
}

.form-textarea::placeholder {
  color: #94a3b8; /* text-slate-500 */
}

.form-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
  box-sizing: border-box;
}

.vehicle-photos .form-header {
  padding-right: 0; /* 移除额外的右边距 */
  box-sizing: border-box;
}

/* 照片网格 */
.photo-scroll {
  width: 100%;
  white-space: nowrap;
  padding: 10rpx 0 10rpx;
  overflow-x: auto;
  box-sizing: border-box;
}

.photo-container {
  display: inline-flex;
  align-items: center;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.photo-item-wrapper {
  position: relative;
  margin-right: 16rpx;
  transition: transform 0.3s ease-out;
}

.photo-item-wrapper.cover .photo-item {
  border: 2px solid #3b82f6;
  box-shadow: 0 0 0 2px #3b82f6;
}

.photo-item {
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
  height: 128rpx;
  width: 128rpx;
  background-color: rgba(15, 23, 42, 0.6);
  border: 1px solid rgba(100, 116, 139, 0.7);
}

.photo-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.cover-tag {
  position: absolute;
  top: 8rpx;
  left: 8rpx;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 16rpx;
  background-color: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  z-index: 2;
}

.delete-button {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background-color: #ff4d4f;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 3;
  border: none;
  padding: 0;
}

.delete-icon {
  color: #ffffff;
}

.photo-add {
  height: 128rpx;
  width: 128rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: rgba(15, 23, 42, 0.6);
  border: 1px dashed #475569;
  border-radius: 16rpx;
}

.add-icon {
  color: #94a3b8;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 22rpx;
  color: #94a3b8;
}

.template-section {
  margin-top: -10rpx;
  margin-bottom: 14rpx;
  padding: 0; /* 移除内边距，使用容器的内边距 */
  box-sizing: border-box;
}

/* 模板卡片 */
.template-card {
  padding: 16rpx 24rpx; /* px-3 py-2 */
  border-radius: 16rpx; /* rounded-2xl */
  background-color: #1e293b; /* bg-slate-900 */
  border: 1px solid #475569; /* border-slate-700 */
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box; /* 确保padding包含在width内 */
  width: 100%; /* 确保宽度为100% */
}

.template-info {
  display: flex;
  flex-direction: column;
}

.template-name {
  font-size: 24rpx; /* text-[12px] */
  color: #f1f5f9; /* text-slate-100 */
  margin-bottom: 8rpx;
}

.template-desc {
  font-size: 22rpx; /* text-[11px] */
  color: #64748b; /* text-slate-500 */
}

.template-tag {
  font-size: 20rpx; /* text-[10px] */
  padding: 4rpx 16rpx; /* px-2 py-0.5 */
  border-radius: 32rpx; /* rounded-full */
  background-color: rgba(16, 185, 129, 0.15); /* bg-emerald-500/15 */
  color: #6ee7b7; /* text-emerald-300 */
  border: 1px solid rgba(16, 185, 129, 0.4); /* border-emerald-400/40 */
}

.template-link {
  font-size: 22rpx; /* text-[11px] */
  color: #60a5fa; /* text-blue-400 */
}

/* CTA 按钮 */
.cta-section {
  padding: 16rpx 0 32rpx; /* 上下内边距，无左右内边距 */
  box-sizing: border-box;
}

.cta-button {
  width: 100%;
  padding: 20rpx; /* py-2.5 */
  border-radius: 40rpx; /* rounded-2xl (changed from 16rpx to match design) */
  background-color: #3b82f6; /* bg-blue-600 */
  color: #ffffff;
  font-size: 28rpx; /* text-sm */
  font-weight: 500;
  box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3); /* shadow-lg shadow-blue-600/30 */
  border: none;
  box-sizing: border-box; /* 确保padding包含在width内 */
}

/* 文本域部分 */
.textarea-section {
  padding-right: 0; /* 移除右侧内边距 */
  box-sizing: border-box;
}

/* 卖点亮点和推荐话术文本域 */
.form-textarea {
  width: 100%; /* 使用完整的宽度 */
  box-sizing: border-box; /* 确保padding包含在width内 */
}

/* AI话术容器 */
.ai-textarea-container {
  display: flex;
  align-items: flex-start;
  gap: 10rpx;
  box-sizing: border-box;
}

.ai-textarea {
  flex: 1;
  margin-right: 0;
}

.form-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 8rpx;
}

.ai-generate-button {
  width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #3b82f6; /* bg-blue-600 */
  color: #ffffff;
  font-size: 24rpx; /* text-[12px] */
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 自动调整高度的文本域 */
.form-textarea.auto-height {
  height: auto;
  min-height: 120rpx;
}

.form-textarea.short.auto-height {
  min-height: 120rpx;
}
