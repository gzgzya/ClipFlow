/* 标准化拍摄页面样式 */
.container {
  width: 100%;
  height: 100vh;
  background-color: #020617;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 安全区域适配 */
.safe-area-bottom {
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

.safe-area-padding {
  padding-left: constant(safe-area-inset-left);
  padding-left: env(safe-area-inset-left);
  padding-right: constant(safe-area-inset-right);
  padding-right: env(safe-area-inset-right);
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #020617;
  position: relative;
  padding-bottom: 180rpx;
  height: 100%;
  padding-top: 0;
}

/* 滑动指示器 */
.swipe-indicator {
  display: flex;
  justify-content: center;
  flex: 1;
  padding: 0 20rpx;
}

.swipe-text {
  font-size: 24rpx; /* 参考首页字体大小 */
  color: #94a3b8;
}

/* 拍摄进度信息行 */
.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 32rpx 8rpx 32rpx;
  font-size: 28rpx; /* 参考首页字体大小 */
  color: #94a3b8;
  min-height: 44rpx;
}

.header-status {
  color: #f1f5f9;
  flex-shrink: 0;
}

/* 小屏幕设备适配 */
@media (max-height: 667px) {
  .preview-section-wrapper {
    margin: 12rpx 24rpx;
    border-radius: 40rpx; /* 统一圆角大小参考首页 */
  }
  
  .steps-section {
    padding: 16rpx 32rpx 0;
  }
  
  .step-content {
    padding: 12rpx 20rpx;
  }
}

/* 大屏幕设备适配 */
@media (min-height: 812px) {
  .preview-section-wrapper {
    margin: 20rpx 40rpx;
    border-radius: 40rpx; /* 统一圆角大小参考首页 */
  }
  
  .content {
    padding-bottom: 220rpx;
  }
  
  .steps-section {
    padding: 32rpx;
  }
}

/* 摄像头预览区域容器 */
.preview-section-wrapper {
  margin: 16rpx 32rpx;
  border-radius: 40rpx; /* 统一圆角大小参考首页 */
  overflow: hidden;
  border: 1rpx solid #1e293b;
  position: relative;
}

/* 摄像头预览区域 */
.preview-section {
  position: relative;
  width: 100%;
  /* 使用padding-top实现正方形比例 */
  height: 0;
  padding-top: 100%; /* 1:1 正方形比例 */
}

/* 三种预览模式样式 */
.preview-mode {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 页面切换动画 */
.preview-mode.slide-left {
  transform: translateX(-100%);
}

.preview-mode.slide-right {
  transform: translateX(100%);
}

.default-preview .preview-image,
.camera-preview .camera-preview,
.media-preview .media-preview,
.media-preview .media-player {
  width: 100%;
  height: 100%;
}

.preview-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.6), transparent, rgba(0, 0, 0, 0.4));
}

/* 播放按钮覆盖层 */
.play-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.3);
}

.play-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-tip {
  position: absolute;
  top: 24rpx;
  left: 24rpx;
  right: 24rpx;
  font-size: 26rpx; /* 参考首页字体大小 */
  color: #f1f5f9;
}

.tip-content {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
  margin-top: 8rpx;
}

.tip-banner {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 32rpx; /* 统一圆角大小参考首页 */
  background-color: rgba(0, 0, 0, 0.5);
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  font-size: 24rpx; /* 参考首页字体大小 */
  margin-bottom: 16rpx;
}

.tip-icon {
  margin-right: 8rpx;
  width: 10px;
  height: 10px;
}

.tip-title {
  margin-top: 4rpx;
  color: #e2e8f0;
  font-size: 28rpx; /* 参考首页字体大小 */
  line-height: 1.4;
}

.tip-desc {
  font-size: 24rpx; /* 参考首页字体大小 */
  color: #cbd5e1;
  margin-top: 8rpx;
  line-height: 1.5;
  white-space: pre-line;
}

.preview-footer {
  position: absolute;
  bottom: 24rpx;
  left: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.fragment-info {
  /* 左侧信息 */
}

.fragment-text {
  padding: 8rpx 12rpx;
  border-radius: 32rpx; /* 统一圆角大小参考首页 */
  background-color: rgba(0, 0, 0, 0.6);
  font-size: 24rpx; /* 参考首页字体大小 */
  color: #f1f5f9;
}

.retake-button {
  padding: 8rpx 20rpx;
  border-radius: 32rpx; /* 统一圆角大小参考首页 */
  background-color: rgba(0, 0, 0, 0.6);
  border: 1rpx solid rgba(248, 113, 113, 0.6);
  font-size: 24rpx; /* 参考首页字体大小 */
  color: #fecaca;
}

/* 步骤列表 */
.steps-section {
  padding: 24rpx 32rpx 0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.header-text {
  font-size: 28rpx; /* 参考首页字体大小 */
  color: #94a3b8;
  flex-shrink: 0;
}

.header-subtext {
  font-size: 24rpx; /* 参考首页字体大小 */
  color: #64748b;
}

.steps-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-bottom: 24rpx;
}

.step-item {
  /* 每个步骤项 */
}

.step-item.completed {
  /* 已完成的步骤 */
}

.step-item.active {
  /* 当前活动步骤 */
}

.step-content {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  border-radius: 40rpx; /* 统一圆角大小参考首页 */
  background-color: rgba(15, 23, 42, 0.8);
  border: 1rpx solid rgba(30, 41, 59, 0.8);
}

.step-content.active {
  border: 1rpx solid rgba(59, 130, 246, 0.5);
}

.step-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.step-number {
  height: 40rpx;
  border-radius: 50%;
  background-color: #334155;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx; /* 参考首页字体大小 */
  color: #f1f5f9;
  min-width: 40rpx;
  width: auto;
  padding: 0 8rpx;
  box-sizing: border-box;
}

.step-number.completed {
  background-color: #3b82f6;
  color: #ffffff;
}

.step-number.active {
  background-color: #334155;
  color: #f1f5f9;
}

.step-number.pending {
  background-color: #334155;
  color: #f1f5f9;
}

.number-text {
  font-size: 24rpx; /* 参考首页字体大小 */
}

.step-desc {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.desc-title {
  font-size: 28rpx; /* 参考首页字体大小 */
  color: #f1f5f9;
}

.desc-subtitle {
  font-size: 24rpx; /* 参考首页字体大小 */
  color: #94a3b8;
}

.step-action {
  padding: 8rpx 16rpx;
  border-radius: 32rpx; /* 统一圆角大小参考首页 */
  font-size: 24rpx; /* 参考首页字体大小 */
  background-color: #334155;
  color: #f1f5f9;
  border: none;
  margin-left: auto;
  height: fit-content;
}

.step-completed {
  color: #60a5fa;
  font-size: 24rpx; /* 参考首页字体大小 */
  margin-left: auto;
}

.step-action.completed {
  color: #60a5fa;
  background-color: transparent;
}

.step-action.active {
  background-color: #334155;
  color: #f1f5f9;
}

.step-action.pending {
  background-color: #334155;
  color: #f1f5f9;
}

/* 下一个主步骤提示 */
.next-step {
  border-radius: 40rpx; /* 统一圆角大小参考首页 */
  background: linear-gradient(to right, rgba(245, 158, 11, 0.1), rgba(16, 185, 129, 0.1), rgba(59, 130, 246, 0.1));
  border: 1rpx solid #334155;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.next-content {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
}

.next-info {
  display: flex;
  flex-direction: column;
  gap: 2rpx;
  flex: 1;
}

.info-title {
  font-size: 24rpx; /* 参考首页字体大小 */
  color: #f1f5f9;
}

.info-desc {
  font-size: 20rpx;
  color: #94a3b8;
}

.next-button {
  padding: 8rpx 16rpx;
  border-radius: 32rpx; /* 统一圆角大小参考首页 */
  background-color: #3b82f6;
  color: #ffffff;
  font-size: 24rpx; /* 参考首页字体大小 */
  border: none;
  margin-left: auto;
  white-space: nowrap;
  height: fit-content;
}

/* 底部拍摄控制条 - 手机相机风格 */
.camera-control-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 0;
  background: linear-gradient(to top, rgba(0, 0, 0, 0.8), transparent);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

/* 底部控制条屏幕适配 */
@media (max-height: 667px) {
  .camera-control-bar {
    padding: 10rpx 0;
  }
  
  .control-button {
    width: 90rpx;
    height: 90rpx;
  }
  
  .record-button {
    width: 110rpx;
    height: 110rpx;
  }
}

@media (min-height: 812px) {
  .camera-control-bar {
    padding: 25rpx 0;
  }
  
  .control-button {
    width: 90rpx;
    height: 90rpx;
  }
  
  .record-button {
    width: 110rpx;
    height: 110rpx;
  }
}

.control-buttons-container {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 16rpx;
}

.control-button {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.control-button.switch-camera {
  background-color: rgba(30, 41, 59, 0.8);
}

.control-button.album {
  background-color: rgba(30, 41, 59, 0.8);
}

.icon-image {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-image image {
  width: 100%;
  height: 100%;
}

.record-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10px 20px rgba(239, 68, 68, 0.4);
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: visible;
  transition: all 0.3s ease;
  transform: scale(1);
}

.record-button:active {
  transform: scale(0.92);
}

.record-button.photo-mode {
  background-color: rgba(255, 255, 255, 0.9);
  border: 6rpx solid rgba(255, 255, 255, 0.8);
}

.record-button.video-mode {
  background-color: transparent;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
}

.record-button.recording {
  animation: pulse 1.5s infinite;
  border: 6rpx solid rgba(239, 68, 68, 0.3);
}

.record-button.recording {
  animation: pulse 1.5s infinite;
}

/* 呼吸动画 */
@keyframes breathe {
  0% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.2);
    opacity: 0.7;
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(239, 68, 68, 0.6);
  }
  70% {
    box-shadow: 0 0 0 10px rgba(239, 68, 68, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(239, 68, 68, 0);
  }
}

.record-inner {
  position: absolute;
  transition: all 0.3s ease;
}

.photo-inner {
  width: 54rpx;
  height: 54rpx;
  border-radius: 50%;
  background-color: #ffffff;
}

.video-inner {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #ef4444;
}

.recording-inner {
  width: 40rpx;
  height: 40rpx;
  border-radius: 8rpx;
  background-color: #ef4444;
  animation: breathe 2s infinite ease-in-out;
}

/* 录制进度环 */
.record-progress-ring {
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  width: calc(100% + 20rpx);
  height: calc(100% + 20rpx);
  border-radius: 50%;
  background: conic-gradient(rgba(239, 68, 68, 0.8) 0deg, transparent 0deg);
  z-index: -1;
}

/* 录制时长显示 */
.recording-duration {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 24rpx;
  color: #ffffff;
  font-weight: bold;
  z-index: 2;
  background-color: transparent;
}

/* 禁用状态按钮 */
.control-button.disabled {
  opacity: 0.4;
  background-color: rgba(30, 41, 59, 0.4) !important;
  pointer-events: none;
}

/* 解决重复定义的问题 */
.step-wrapper:first-child .step-line {
  margin-left: 24rpx;
}