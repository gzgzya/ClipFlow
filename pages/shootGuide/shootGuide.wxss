/* 标准化拍摄页面样式 */
.container {
  width: 100%;
  height: 100vh;
  background-color: #020617;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #020617;
  position: relative;
  padding-bottom: 160rpx;
  height: 100%;
}

/* 步骤进度条 */
.progress-section {
  padding: 24rpx 32rpx 16rpx 32rpx;
}

.progress-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #94a3b8;
  margin-bottom: 16rpx;
}

.header-status {
  color: #f1f5f9;
}

.progress-container {
  width: 100%;
}

.progress-steps {
  display: flex;
  align-items: center;
  position: relative;
  margin-bottom: 16rpx;
}

.step-wrapper {
  display: flex;
  align-items: center;
  flex: 1;
}

.step-wrapper:last-child {
  flex: 0;
}

.step-indicator {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #64748b;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
  flex-shrink: 0;
}

.step-indicator.completed {
  background-color: #10b981;
}

.step-indicator.active {
  background-color: #3b82f6;
}

.step-indicator.pending {
  border: 1px solid #64748b;
  background-color: transparent;
}

.step-number {
  font-size: 22rpx;
  color: #94a3b8;
}

.step-icon {
  width: 11px;
  height: 11px;
}

.step-line {
  flex: 1;
  height: 8rpx;
  background-color: #64748b;
  border-radius: 0;
}

.step-line.completed {
  background-color: #10b981;
}

.step-line.active {
  background-color: #3b82f6;
}

.step-labels {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 26rpx;
  color: #94a3b8;
  padding: 0 24rpx;
}

.label-text {
  flex: 1;
  text-align: center;
  white-space: nowrap;
  position: relative;
  top: 0;
  transform: translateX(0);
}

.step-wrapper {
  display: flex;
  align-items: center;
  flex: 1;
}

.step-wrapper:last-child {
  flex: 0;
}

