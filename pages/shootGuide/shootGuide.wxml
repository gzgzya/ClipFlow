<!-- 标准化拍摄页面 -->
<view class="container">
  <!-- 内容区域 -->
  <view class="content">
    <!-- 步骤进度条 -->
    <view class="progress-section">
      <view class="progress-header">
        <text class="header-text">拍摄流程</text>
        <text class="header-status">已完成 2/3 步</text>
      </view>
      <view class="progress-steps">
        <view class="step-item">
          <view class="step-indicator completed">
            <icon class="step-icon" type="success" size="11" color="#ffffff"></icon>
          </view>
          <view class="step-line filled"></view>
        </view>
        <view class="step-item">
          <view class="step-indicator completed">
            <icon class="step-icon" type="success" size="11" color="#ffffff"></icon>
          </view>
          <view class="step-line active"></view>
        </view>
        <view class="step-item">
          <view class="step-indicator pending">
            <text class="step-number">3</text>
          </view>
        </view>
      </view>
      <view class="step-labels">
        <text class="label-text">外观</text>
        <text class="label-text">内饰</text>
        <text class="label-text">亮点</text>
      </view>
    </view>

    <!-- 摄像头预览区域 -->
    <view class="preview-section">
      <image class="preview-image" src="https://images.pexels.com/photos/3752169/pexels-photo-3752169.jpeg?auto=compress&cs=tinysrgb&w=1200" mode="aspectFill"></image>
      <view class="preview-overlay"></view>
      
      <!-- 提示文案 -->
      <view class="preview-tip">
        <view class="tip-banner">
          <icon class="tip-icon" type="lightbulp" size="10" color="#fbbf24"></icon>
          <text class="tip-text">建议：车头 45° 远景，保证光线充足</text>
        </view>
        <text class="tip-title">步骤 2 / 3 · 内饰 - 主驾视角</text>
        <text class="tip-desc">对准中控与方向盘，缓慢平移，避免晃动。</text>
      </view>

      <!-- 底部进度与重拍 -->
      <view class="preview-footer">
        <view class="fragment-info">
          <text class="fragment-text">当前片段：10s / 建议 12s</text>
        </view>
        <button class="retake-button" bindtap="onRetake">重拍本段</button>
      </view>
    </view>

    <!-- 步骤列表 & 说明 -->
    <view class="steps-section">
      <view class="section-header">
        <text class="header-text">当前步骤：内饰</text>
        <text class="header-subtext">建议 3 个小段</text>
      </view>
      
      <view class="steps-list">
        <view class="step-item completed">
          <view class="step-content">
            <view class="step-info">
              <view class="step-number completed">
                <text class="number-text">1</text>
              </view>
              <view class="step-desc">
                <text class="desc-title">主驾视角 · 中控&方向盘</text>
                <text class="desc-subtitle">已拍 11s · 建议突出液晶仪表、中控大屏</text>
              </view>
            </view>
            <button class="step-action completed">已完成</button>
          </view>
        </view>

        <view class="step-item active">
          <view class="step-content">
            <view class="step-info">
              <view class="step-number active">
                <text class="number-text">2</text>
              </view>
              <view class="step-desc">
                <text class="desc-title">后排空间 & 地台</text>
                <text class="desc-subtitle">建议拍摄腿部空间、地台凸起情况</text>
              </view>
            </view>
            <button class="step-action active" bindtap="onShoot">去拍摄</button>
          </view>
        </view>

        <view class="step-item">
          <view class="step-content">
            <view class="step-info">
              <view class="step-number">
                <text class="number-text">3</text>
              </view>
              <view class="step-desc">
                <text class="desc-title">细节 & 配置展示</text>
                <text class="desc-subtitle">方向盘、座椅、音响、氛围灯等高频关注点</text>
              </view>
            </view>
            <button class="step-action" bindtap="onShoot">去拍摄</button>
          </view>
        </view>
      </view>

      <!-- 下一个主步骤提示 -->
      <view class="next-step">
        <view class="next-content">
          <view class="next-info">
            <text class="info-title">下一步：亮点讲解</text>
            <text class="info-desc">选择 2-3 个最能打动客户的亮点，AI 将自动生成话术。</text>
          </view>
          <button class="next-button" bindtap="onNextStep">跳转</button>
        </view>
      </view>
    </view>
  </view>

  <!-- 底部拍摄控制条 -->
  <view class="control-bar">
    <view class="control-info">
      <text class="info-text">长按录制 / 点击开始&结束</text>
      <text class="duration-text">总时长：00:28 / 建议 00:35</text>
    </view>
    <view class="control-buttons">
      <button class="control-button" bindtap="onRotate">
        <icon class="control-icon" type="refresh" size="12" color="#cbd5e1"></icon>
      </button>
      <button class="record-button" bindtap="onRecord">
        <view class="record-inner"></view>
      </button>
      <button class="control-button" bindtap="onCapture">
        <icon class="control-icon" type="pic" size="12" color="#cbd5e1"></icon>
      </button>
    </view>
  </view>
</view>