/* 一键成片页面样式 */
.container {
  background-color: #0f172a;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 状态栏 */
.status-bar {
  height: 40rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: rgba(0, 0, 0, 0.8);
  font-size: 12rpx;
  color: #f1f5f9;
  font-weight: 600;
}

.status-icons {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.battery {
  width: 16rpx;
  height: 8rpx;
  border: 2rpx solid #f1f5f9;
  border-radius: 2rpx;
  position: relative;
}

.battery::after {
  content: '';
  position: absolute;
  top: 50%;
  right: -4rpx;
  transform: translateY(-50%);
  width: 4rpx;
  height: 6rpx;
  background-color: #f1f5f9;
  border-radius: 0 2rpx 2rpx 0;
}

/* 顶部导航 */
.nav-bar {
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(to right, #0f172a, #1e293b);
  color: #f1f5f9;
}

.back-button {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #1e293b;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  color: #f1f5f9;
}

.nav-title {
  display: flex;
  flex-direction: column;
  align-items: center;
  line-height: 1.4;
}

.title-main {
  font-size: 14rpx;
  font-weight: 600;
}

.title-sub {
  font-size: 10rpx;
  color: #94a3b8;
}

.history-button {
  font-size: 12rpx;
  color: #94a3b8;
  background: none;
  border: none;
  padding: 0;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #020617;
  padding-bottom: 128rpx;
}

/* 区块 */
.section {
  padding: 24rpx 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 11rpx;
  color: #94a3b8;
}

.section-subtitle {
  font-size: 10rpx;
  color: #94a3b8;
}

/* 统一模板卡片 */
.uniform-template-card {
  background-color: #1e293b;
  border: 1rpx solid #334155;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.card-content {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.text-container {
  flex: 1;
  margin-right: 16rpx;
}

.card-title {
  font-size: 12rpx;
  color: #f1f5f9;
  margin-bottom: 8rpx;
  display: block;
}

.card-description {
  font-size: 10rpx;
  color: #94a3b8;
  display: block;
}

.toggle-switch {
  transform: scale(0.8);
}

/* 模板容器 */
.templates-container {
  display: flex;
  gap: 16rpx;
  overflow-x: auto;
  padding-bottom: 8rpx;
}

.template-card {
  flex-shrink: 0;
  min-width: 208rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.template-card.blue {
  background-color: #3b82f6;
  color: white;
}

.template-card.slate {
  background-color: #1e293b;
  border: 1rpx solid #475569;
  color: #f1f5f9;
}

.template-card.active {
  border: 2rpx solid #3b82f6;
}

.template-subtitle {
  font-size: 10rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.template-card.slate .template-subtitle {
  color: #94a3b8;
}

.template-title {
  font-size: 14rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.template-description {
  font-size: 10rpx;
  opacity: 0.8;
}

.template-card.slate .template-description {
  color: #94a3b8;
}

/* 设置卡片 */
.setting-card {
  background-color: #1e293b;
  border: 1rpx solid #334155;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

/* 车辆列表 */
.vehicle-section {
  padding-bottom: 0;
}

.select-button {
  font-size: 11rpx;
  color: #60a5fa;
  display: flex;
  align-items: center;
  gap: 4rpx;
  background: none;
  border: none;
  padding: 0;
}

.vehicle-card {
  background-color: #1e293b;
  border: 1rpx solid #334155;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.card-content {
  display: flex;
  justify-content: space-between;
}

.vehicle-info {
  display: flex;
  flex: 1;
}

.image-container {
  width: 72rpx;
  height: 72rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 1rpx solid #475569;
  margin-right: 16rpx;
}

.vehicle-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.info-container {
  display: flex;
  flex-direction: column;
}

.vehicle-name {
  font-size: 12rpx;
  color: #f1f5f9;
  margin-bottom: 8rpx;
}

.vehicle-status {
  font-size: 10rpx;
  color: #94a3b8;
  margin-bottom: 8rpx;
}

.vehicle-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.detail-item {
  font-size: 10rpx;
  color: #94a3b8;
  display: flex;
  align-items: center;
}

.detail-icon {
  margin-right: 4rpx;
}

.blue {
  color: #60a5fa;
}

.green {
  color: #34d399;
}

.amber {
  color: #fbbf24;
}

.gray {
  color: #94a3b8;
}

.warning {
  color: #fbbf24;
}

.feature {
  color: #34d399;
}

.action-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.recommendation-tag {
  font-size: 10rpx;
  padding: 4rpx 8rpx;
  border-radius: 32rpx;
  background-color: rgba(16, 185, 129, 0.15);
  color: #6ee7b7;
  border: 1rpx solid rgba(16, 185, 129, 0.4);
}

.action-button {
  font-size: 10rpx;
  padding: 4rpx 8rpx;
  border-radius: 32rpx;
  height: auto;
  line-height: 1.4;
}

.action-button.adjust {
  background-color: rgba(245, 158, 11, 0.15);
  color: #fbbf24;
  border: 1rpx solid rgba(245, 158, 11, 0.4);
}

.action-button.template {
  background-color: #334155;
  color: #f1f5f9;
}

.remove-button {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  background-color: #334155;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #cbd5e1;
}

/* 更多提示 */
.more-tip {
  background-color: rgba(30, 41, 59, 0.6);
  border: 1rpx dashed #475569;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 11rpx;
  color: #94a3b8;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

/* 底部操作栏 */
.bottom-bar {
  height: 128rpx;
  background-color: rgba(0, 0, 0, 0.95);
  border-top: 1rpx solid #334155;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  font-size: 11rpx;
  color: #f1f5f9;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.summary-container {
  display: flex;
  flex-direction: column;
}

.summary-title {
  font-size: 10rpx;
  color: #94a3b8;
  margin-bottom: 8rpx;
}

.summary-text {
  font-size: 14rpx;
}

.generate-button {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 32rpx;
  border-radius: 16rpx;
  background-color: #3b82f6;
  color: white;
  font-size: 12rpx;
  font-weight: 500;
}