/* 一键成片页面样式 */
.container {
  background-color: #020617; /* bg-slate-950 */
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #020617; /* bg-slate-950 */
  padding-bottom: 128rpx;
}

/* 区块 */
.section {
  padding: 24rpx 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 26rpx; /* text-[11px] -> 增大字体，参考首页样式 */
  color: #94a3b8; /* text-slate-400 */
}

.section-subtitle {
  font-size: 24rpx; /* text-[10px] -> 增大字体，参考首页样式 */
  color: #64748b; /* text-slate-500 */
}

/* 统一模板卡片 */
.uniform-template-card {
  background-color: rgba(15, 23, 42, 0.9); /* bg-slate-900/90 */
  border: 1rpx solid #334155; /* border-slate-800 */
  border-radius: 16rpx; /* rounded-2xl */
  padding: 24rpx; /* px-3 py-2 * 8 */
  margin-bottom: 16rpx;
}

.card-content {
  display: flex;
  justify-content: space-between;
  align-items: center; /* 调整为居中对齐，参考首页样式 */
}

.text-container {
  flex: 1;
  margin-right: 16rpx;
}

.card-title {
  font-size: 28rpx; /* text-[12px] -> 增大字体，参考首页样式 */
  color: #f1f5f9; /* text-slate-100 */
  margin-bottom: 8rpx; /* mb-1 */
  display: block;
}

.card-description {
  font-size: 24rpx; /* text-[10px] -> 增大字体，参考首页样式 */
  color: #94a3b8; /* text-slate-400 */
  display: block;
}

.toggle-switch {
  transform: scale(0.8);
  width: 64rpx; /* w-8 */
  height: 32rpx; /* h-4 */
}

/* 高级设置按钮 */
.advanced-button {
  font-size: 26rpx; /* text-[11px] -> 增大字体，参考首页样式 */
  color: #60a5fa; /* text-blue-400 */
  display: flex;
  align-items: center;
  gap: 4rpx; /* space-x-1 */
  background: none;
  border: none;
  padding: 0;
}

.advanced-icon {
  width: 20rpx;
  height: 20rpx;
}

/* 模板容器 */
.templates-container {
  display: flex;
  gap: 16rpx; /* space-x-2 */
  overflow-x: auto;
  padding-bottom: 8rpx;
}

.template-card {
  flex-shrink: 0;
  min-width: 208rpx; /* min-w-[130px] * 1.6 */
  border-radius: 16rpx; /* rounded-2xl */
  padding: 24rpx; /* px-3 py-2 * 8 */
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.template-card.blue {
  background-color: #3b82f6; /* bg-blue-600 */
  color: white;
}

.template-card.slate {
  background-color: #1e293b; /* bg-slate-900 */
  border: 1rpx solid #475569; /* border-slate-700 */
  color: #f1f5f9; /* text-slate-100 */
}

.template-card.active {
  background-color: #3b82f6 !important; /* bg-blue-600 - 选中时背景为蓝色 */
  border: 2rpx solid #3b82f6; /* border-blue-600 */
  color: white;
  position: relative;
}

.template-card.active::after {
  content: '';
  position: absolute;
  top: -2rpx;
  left: -2rpx;
  right: -2rpx;
  bottom: -2rpx;
  border: 2rpx solid #3b82f6;
  border-radius: inherit;
  pointer-events: none;
}

.template-subtitle {
  font-size: 24rpx; /* text-[10px] -> 增大字体，参考首页样式 */
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.template-card.slate .template-subtitle {
  color: #94a3b8; /* text-slate-400 */
}

.template-title {
  font-size: 32rpx; /* text-sm -> 增大字体，参考首页样式 */
  font-weight: 600;
  margin-bottom: 8rpx;
}

.template-description {
  font-size: 24rpx; /* text-[10px] -> 增大字体，参考首页样式 */
  opacity: 0.8;
}

.template-card.slate .template-description {
  color: #94a3b8; /* text-slate-400 */
}

/* 设置卡片 */
.setting-card {
  background-color: rgba(30, 41, 59, 0.8); /* bg-slate-800/80 - 参考首页样式 */
  border: 1rpx solid rgba(100, 116, 139, 0.6); /* border-slate-700/60 - 参考首页样式 */
  border-radius: 40rpx; /* rounded-2xl -> 增大圆角，参考首页样式 */
  padding: 24rpx; /* px-3 py-2 * 8 */
  margin-bottom: 16rpx;
}

/* 车辆列表 */
.vehicle-section {
  padding-bottom: 0;
}

.select-button {
  font-size: 26rpx; /* text-[11px] -> 增大字体，参考首页样式 */
  color: #60a5fa; /* text-blue-400 */
  display: flex;
  align-items: center;
  gap: 4rpx; /* space-x-1 */
  background: none;
  border: none;
  padding: 0;
}

.select-icon {
  width: 20rpx;
  height: 20rpx;
}

.vehicle-card {
  background-color: rgba(30, 41, 59, 0.8); /* bg-slate-800/80 - 参考首页样式 */
  border: 1rpx solid rgba(100, 116, 139, 0.6); /* border-slate-700/60 - 参考首页样式 */
  border-radius: 40rpx; /* rounded-2xl -> 增大圆角，参考首页样式 */
  padding: 16rpx; /* 减小内边距以降低高度 */
  margin-bottom: 16rpx;
  position: relative;
}

.card-content {
  display: flex;
  justify-content: space-between;
}

.vehicle-info {
  display: flex;
  flex: 1;
}

.image-container {
  width: 64rpx; /* 减小宽度 */
  height: 64rpx; /* 减小高度 */
  border-radius: 12rpx; /* rounded-xl */
  overflow: hidden;
  border: 1rpx solid #475569; /* border-slate-700 */
  margin-right: 16rpx; /* space-x-2 */
  position: relative;
}

.vehicle-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.info-container {
  display: flex;
  flex-direction: column;
}

.vehicle-name {
  font-size: 26rpx; /* 减小字体 */
  color: #f1f5f9; /* text-slate-100 */
  margin-bottom: 4rpx; /* 减小间距 */
}

.vehicle-status {
  font-size: 22rpx; /* 减小字体 */
  color: #64748b; /* text-slate-500 */
  margin-bottom: 4rpx; /* 减小间距 */
}

.vehicle-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx; /* space-y-1 */
}

.details-row {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  align-items: center;
}

.detail-item {
  font-size: 24rpx; /* text-[10px] -> 增大字体，参考首页样式 */
  color: #94a3b8; /* text-slate-400 */
  display: flex;
  align-items: center;
}

.detail-icon {
  margin-right: 4rpx; /* mr-1 */
  width: 24rpx;
  height: 24rpx;
}

.blue {
  color: #60a5fa; /* text-blue-400 */
}

.green {
  color: #34d399; /* text-emerald-400 */
}

.amber {
  color: #fbbf24; /* text-amber-400 */
}

.gray {
  color: #94a3b8; /* text-slate-400 */
}

.warning {
  color: #fbbf24; /* text-amber-400 */
}

.feature {
  color: #34d399; /* text-emerald-400 */
}

.action-container {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx; /* space-y-1 */
}

.recommendation-tag {
  font-size: 24rpx; /* text-[10px] -> 增大字体，参考首页样式 */
  padding: 4rpx 16rpx; /* px-2 py-0.5 */
  border-radius: 32rpx; /* rounded-full */
  background-color: rgba(16, 185, 129, 0.15); /* bg-emerald-500/15 */
  color: #6ee7b7; /* text-emerald-300 */
  border: 1rpx solid rgba(16, 185, 129, 0.4); /* border-emerald-400/40 */
}

.action-button {
  font-size: 24rpx; /* text-[10px] -> 增大字体，参考首页样式 */
  padding: 4rpx 16rpx; /* px-2 py-0.5 */
  border-radius: 32rpx; /* rounded-full */
  height: auto;
  line-height: 1.4;
}

.action-button.adjust {
  background-color: rgba(245, 158, 11, 0.15); /* bg-amber-500/15 */
  color: #fbbf24; /* text-amber-300 */
  border: 1rpx solid rgba(245, 158, 11, 0.4); /* border-amber-400/40 */
}

.action-button.template {
  background-color: #334155; /* bg-slate-800 */
  color: #f1f5f9; /* text-slate-100 */
}

.remove-button {
  width: 32rpx; /* w-4 * 8 */
  height: 32rpx; /* h-4 * 8 */
  border-radius: 50%;
  background-color: #334155; /* bg-slate-800 */
  display: flex;
  align-items: center;
  justify-content: center;
  color: #cbd5e1; /* text-slate-300 */
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  z-index: 1;
  border: none;
  padding: 0;
  margin: 0;
}

.remove-icon {
  font-size: 20rpx;
  line-height: 1;
  color: #cbd5e1; /* text-slate-300 */
}

/* 更多提示 */
.more-tip {
  background-color: rgba(30, 41, 59, 0.6); /* bg-slate-900/60 */
  border: 1rpx dashed #475569; /* border-dashed border-slate-700 */
  border-radius: 40rpx; /* rounded-2xl -> 增大圆角，参考首页样式 */
  padding: 16rpx;
  font-size: 26rpx; /* text-[11px] -> 增大字体，参考首页样式 */
  color: #94a3b8; /* text-slate-500 */
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.tip-icon {
  width: 20rpx;
  height: 20rpx;
}

/* 底部操作栏 */
.bottom-bar {
  height: 128rpx;
  background-color: rgba(0, 0, 0, 0.95); /* bg-black/95 */
  border-top: 1rpx solid #334155; /* border-slate-800 */
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  font-size: 26rpx; /* text-[11px] -> 增大字体，参考首页样式 */
  color: #f1f5f9; /* text-slate-100 */
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.summary-container {
  display: flex;
  flex-direction: column;
}

.summary-title {
  font-size: 24rpx; /* text-[10px] -> 增大字体，参考首页样式 */
  color: #94a3b8; /* text-slate-400 */
  margin-bottom: 8rpx;
}

.summary-text {
  font-size: 28rpx; /* text-sm -> 减小字体，恢复较小尺寸 */
}

.generate-button {
  display: flex;
  align-items: center;
  gap: 8rpx; /* space-x-2 */
  padding: 16rpx 24rpx; /* py-2.5 px-4 -> 减小内边距，降低按钮高度 */
  border-radius: 40rpx; /* rounded-2xl -> 增大圆角，参考首页样式 */
  background-color: #3b82f6; /* bg-blue-600 */
  color: white;
  font-size: 28rpx; /* text-sm -> 减小字体，恢复较小尺寸 */
  font-weight: 500;
  box-shadow: 0 10px 20px rgba(59, 130, 246, 0.4); /* shadow-lg shadow-blue-600/40 */
}

.generate-icon {
  width: 24rpx;
  height: 24rpx;
}