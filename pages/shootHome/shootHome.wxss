/* 拍摄首页样式 */
.container {
  background-color: #020617; /* bg-slate-950 */
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #020617; /* bg-slate-950 */
  padding-bottom: 48rpx; /* 减少底部padding，因为移除了底部TabBar */
}

/* 通知区域 */
.notice-section {
  padding: 24rpx 32rpx 16rpx;
}

.notice-card {
  background-color: rgba(15, 23, 42, 0.9); /* bg-slate-900/90 */
  border: 1rpx solid #334155; /* border-slate-800 */
  border-radius: 16rpx; /* rounded-2xl */
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.notice-content {
  flex: 1;
}

.notice-title {
  font-size: 22rpx; /* text-[11px] */
  color: #f1f5f9; /* text-slate-100 */
  margin-bottom: 8rpx;
}

.notice-subtitle {
  font-size: 20rpx; /* text-[10px] */
  color: #94a3b8; /* text-slate-400 */
}

.view-list-button {
  font-size: 20rpx; /* text-[10px] */
  color: #60a5fa; /* text-blue-400 */
  background: none;
  border: none;
  padding: 0;
  text-decoration: underline;
}

/* 区块 */
.section {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.continuing-section {
  margin-top: 8rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 22rpx; /* text-[11px] */
  color: #94a3b8; /* text-slate-400 */
}

.section-subtitle {
  font-size: 20rpx; /* text-[10px] */
  color: #94a3b8; /* text-slate-500 */
}

.all-vehicles-button {
  font-size: 22rpx; /* text-[11px] */
  color: #60a5fa; /* text-blue-400 */
  display: flex;
  align-items: center;
  gap: 4rpx;
  background: none;
  border: none;
  padding: 0;
}

.car-icon {
  font-size: 20rpx; /* text-[10px] */
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 16rpx;
}

.search-container {
  position: relative;
  display: flex;
  align-items: center;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  color: #94a3b8; /* text-slate-400 */
  z-index: 1;
}

.search-input {
  width: 100%;
  padding: 16rpx 32rpx 16rpx 72rpx;
  border-radius: 40rpx; /* rounded-2xl */
  background-color: rgba(15, 23, 42, 0.9); /* bg-slate-900/90 */
  font-size: 24rpx; /* text-xs */
  color: #f1f5f9; /* text-slate-100 */
  border: 1rpx solid rgba(100, 116, 139, 0.8); /* border-slate-700/80 */
}

.search-input::placeholder {
  color: #94a3b8; /* text-slate-500 */
}

/* 车辆列表 */
.vehicle-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 车辆项目 */
.vehicle-item, .quick-vehicle-item {
  background-color: rgba(15, 23, 42, 0.9); /* bg-slate-900/90 */
  border: 1rpx solid #334155; /* border-slate-800 */
  border-radius: 16rpx; /* rounded-2xl */
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quick-vehicle-item {
  background-color: rgba(15, 23, 42, 0.9); /* bg-slate-900/90 */
  border: 1rpx solid #334155; /* border-slate-800 */
}

/* 车辆信息 */
.vehicle-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.vehicle-avatar {
  width: 72rpx; /* w-9 * 8 */
  height: 72rpx; /* h-9 * 8 */
  border-radius: 12rpx; /* rounded-xl */
  overflow: hidden;
  border: 1rpx solid #475569; /* border-slate-700 */
}

.vehicle-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.vehicle-details {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.vehicle-name {
  font-size: 22rpx; /* text-[11px] */
  color: #f1f5f9; /* text-slate-100 */
}

.vehicle-status {
  font-size: 20rpx; /* text-[10px] */
  color: #94a3b8; /* text-slate-500 */
}

/* 统计信息 */
.vehicle-stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 4rpx;
}

.stat-item {
  font-size: 20rpx; /* text-[10px] */
  color: #94a3b8; /* text-slate-400 */
  display: flex;
  align-items: center;
}

.stat-icon {
  margin-right: 4rpx;
  font-size: 20rpx;
}

.stat-icon.film {
  color: #60a5fa; /* text-blue-400 */
}

.stat-icon.clock {
  color: #94a3b8; /* text-slate-400 */
}

.stat-icon.info {
  color: #fbbf24; /* text-amber-400 */
}

.stat-item.suggestion {
  color: #fbbf24; /* text-amber-400 */
}

/* 操作按钮 */
.action-button {
  font-size: 20rpx; /* text-[10px] */
  padding: 8rpx 20rpx; /* px-2.5 py-1 */
  border-radius: 32rpx; /* rounded-full */
  border: none;
}

.action-button.continue, .action-button.start {
  background-color: #3b82f6; /* bg-blue-600 */
  color: #ffffff; /* text-white */
}

.action-button.interior {
  background-color: #1e293b; /* bg-slate-800 */
  color: #f1f5f9; /* text-slate-100 */
}

/* 更多车辆提示 */
.more-vehicles {
  background-color: rgba(30, 41, 59, 0.6); /* bg-slate-900/60 */
  border: 1rpx dashed #475569; /* border-dashed border-slate-700 */
  border-radius: 16rpx; /* rounded-2xl */
  padding: 16rpx;
  font-size: 22rpx; /* text-[11px] */
  color: #94a3b8; /* text-slate-500 */
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.more-icon {
  font-size: 20rpx; /* text-[10px] */
  margin-right: 12rpx;
}

.more-text {
  /* 继承父元素样式 */
}

/* 底部提示 */
.footer-tip {
  padding: 0 32rpx 24rpx;
  font-size: 20rpx; /* text-[10px] */
  color: #94a3b8; /* text-slate-500 */
  line-height: 1.5;
}