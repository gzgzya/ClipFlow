/* 拍摄首页样式 */
.container {
  background-color: #0f172a;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* 状态栏 */
.status-bar {
  height: 40rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: rgba(0, 0, 0, 0.8);
  font-size: 12rpx;
  color: #f1f5f9;
  font-weight: 600;
}

.status-icons {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.battery {
  width: 16rpx;
  height: 8rpx;
  border: 2rpx solid #f1f5f9;
  border-radius: 2rpx;
  position: relative;
}

.battery::after {
  content: '';
  position: absolute;
  top: 50%;
  right: -4rpx;
  transform: translateY(-50%);
  width: 4rpx;
  height: 6rpx;
  background-color: #f1f5f9;
  border-radius: 0 2rpx 2rpx 0;
}

/* 顶部导航 */
.nav-bar {
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(to right, #0f172a, #1e293b);
  color: #f1f5f9;
}

.nav-title {
  font-size: 14rpx;
  font-weight: 600;
}

.camera-switch {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: #1e293b;
  display: flex;
  align-items: center;
  justify-content: center;
}

.switch-icon {
  color: #f1f5f9;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #020617;
  padding-bottom: 128rpx;
}

/* 通知区域 */
.notice-section {
  padding: 24rpx 32rpx 16rpx;
}

.notice-card {
  background-color: #1e293b;
  border: 1rpx solid #334155;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.notice-content {
  flex: 1;
}

.notice-title {
  font-size: 12rpx;
  color: #f1f5f9;
  margin-bottom: 8rpx;
}

.notice-subtitle {
  font-size: 10rpx;
  color: #94a3b8;
}

.view-list-button {
  font-size: 10rpx;
  color: #60a5fa;
  background: none;
  border: none;
  padding: 0;
  text-decoration: underline;
}

/* 区块 */
.section {
  padding: 0 32rpx;
  margin-bottom: 32rpx;
}

.continuing-section {
  margin-top: 8rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 11rpx;
  color: #94a3b8;
}

.section-subtitle {
  font-size: 10rpx;
  color: #94a3b8;
}

.all-vehicles-button {
  font-size: 11rpx;
  color: #60a5fa;
  display: flex;
  align-items: center;
  gap: 4rpx;
  background: none;
  border: none;
  padding: 0;
}

.car-icon {
  font-size: 10rpx;
}

/* 搜索栏 */
.search-bar {
  margin-bottom: 16rpx;
}

.search-container {
  position: relative;
  display: flex;
  align-items: center;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  color: #94a3b8;
  z-index: 1;
}

.search-input {
  width: 100%;
  padding: 16rpx 32rpx 16rpx 72rpx;
  border-radius: 32rpx;
  background-color: #1e293b;
  font-size: 12rpx;
  color: #f1f5f9;
  border: 1rpx solid #334155;
}

.search-input::placeholder {
  color: #94a3b8;
}

/* 车辆列表 */
.vehicle-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 更多车辆提示 */
.more-vehicles {
  background-color: rgba(30, 41, 59, 0.6);
  border: 1rpx dashed #475569;
  border-radius: 16rpx;
  padding: 16rpx;
  font-size: 11rpx;
  color: #94a3b8;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

/* 底部提示 */
.footer-tip {
  padding: 0 32rpx 24rpx;
  font-size: 10rpx;
  color: #94a3b8;
  line-height: 1.5;
}

/* 底部导航栏 */
.tab-bar {
  height: 128rpx;
  background-color: rgba(0, 0, 0, 0.95);
  border-top: 1rpx solid #334155;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 11rpx;
  color: #94a3b8;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: none;
  border: none;
  padding: 0;
}

.tab-item.active {
  color: #3b82f6;
}

.tab-icon {
  margin-bottom: 8rpx;
}