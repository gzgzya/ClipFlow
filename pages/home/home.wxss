/* 首页样式 */
.container {
  width: 100%;
  height: 100vh;
  background-color: #020617; /* bg-slate-950 */
  display: flex;
  flex-direction: column;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #020617; /* bg-slate-950 */
  padding-bottom: 128rpx; /* 为底部 TabBar 留出空间 */
}

.top-section {
  padding: 24rpx 32rpx 16rpx 32rpx;
}

/* 搜索区域 */
.search-section {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.search-container {
  flex: 1;
  position: relative;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 1;
  color: #94a3b8; /* text-slate-400 */
}

.search-input {
  width: 100%;
  padding: 16rpx 24rpx 16rpx 80rpx;
  border-radius: 40rpx; /* rounded-2xl -> 10px -> 20rpx*2 */
  background-color: rgba(30, 41, 59, 0.8); /* bg-slate-800/80 */
  font-size: 24rpx; /* text-xs */
  color: #f1f5f9; /* text-slate-100 */
  border: 1px solid rgba(100, 116, 139, 0.6); /* border-slate-700/60 */
  box-sizing: border-box;
}

.search-input::placeholder {
  color: #94a3b8; /* placeholder:text-slate-500 */
}

.filter-button {
  padding: 12rpx 24rpx;
  border-radius: 40rpx; /* rounded-2xl */
  background-color: rgba(30, 41, 59, 0.8); /* bg-slate-800/80 */
  font-size: 24rpx; /* text-xs */
  color: #f1f5f9; /* text-slate-100 */
  display: flex;
  align-items: center;
  gap: 8rpx;
  border: 1px solid rgba(100, 116, 139, 0.6); /* border-slate-700/60 */
  white-space: nowrap;
}

.filter-icon {
  color: #94a3b8; /* text-slate-400 */
}

/* 统计区域 */
.stats-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx; /* text-[11px] */
  color: #94a3b8; /* text-slate-400 */
}

.stats-left {
  display: flex;
  gap: 24rpx;
}

.stats-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.stats-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.stats-dot.available {
  background-color: #34d399; /* bg-emerald-400 */
}

.stats-dot.sold {
  background-color: #64748b; /* bg-slate-500 */
}

.stats-text {
  /* 继承父元素样式 */
}

.stats-right {
  display: flex;
  gap: 24rpx;
}

/* 快捷入口 */
.quick-actions {
  display: flex;
  justify-content: space-between;
  padding: 0 32rpx 24rpx 32rpx;
}

.quick-btn {
  flex: 1;
  margin: 0 8rpx;
  padding: 24rpx 16rpx;
  border-radius: 40rpx; /* rounded-2xl */
  background-color: rgba(30, 41, 59, 0.8); /* bg-slate-800/80 */
  color: #f1f5f9; /* text-slate-100 */
  text-align: center;
  border: 1px solid rgba(100, 116, 139, 0.7); /* border-slate-700/70 */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  min-height: 120rpx; /* 统一高度 */
  box-sizing: border-box;
}

.quick-btn:first-child {
  margin-left: 0;
}

.quick-btn:last-child {
  margin-right: 0;
}

.quick-btn.primary {
  background: linear-gradient(to bottom right, #3b82f6, #60a5fa); /* from-blue-600 to-blue-500 */
  color: #ffffff;
  border: none;
}

.quick-btn-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.quick-subtitle {
  font-size: 22rpx; /* text-[11px] */
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.quick-title {
  font-size: 28rpx; /* text-sm */
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #f8fafc; /* text-slate-50 */
}

.quick-desc {
  font-size: 20rpx; /* text-[10px] */
  opacity: 0.8;
}

/* 车辆列表 */
.vehicle-list {
  padding: 0 32rpx 32rpx 32rpx;
}

.placeholder-card {
  border-radius: 60rpx; /* rounded-3xl */
  background-color: rgba(15, 23, 42, 0.8); /* bg-slate-900/80 */
  border: 1px dashed rgba(100, 116, 139, 0.6); /* border-dashed border-slate-700/60 */
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx 0;
  font-size: 24rpx; /* text-xs */
  color: #64748b; /* text-slate-500 */
}

.placeholder-icon {
  margin-right: 16rpx;
  color: #64748b; /* text-slate-500 */
}

/* 底部 TabBar */
.tab-bar {
  height: 128rpx;
  background-color: rgba(0, 0, 0, 0.95); /* bg-black/95 */
  border-top: 1px solid #1e293b; /* border-slate-800 */
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 22rpx; /* text-[11px] */
  color: #94a3b8; /* text-slate-400 */
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: none;
  border: none;
  padding: 0;
}

.tab-item.active {
  color: #3b82f6; /* text-blue-500 */
}

.tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
  font-size: 32rpx; /* text-base */
}

/* 筛选弹窗 */
.filter-popup {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.filter-popup.show {
  visibility: visible;
  opacity: 1;
}

.filter-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.filter-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #1e293b; /* bg-slate-800 */
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  padding: 32rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.filter-popup.show .filter-content {
  transform: translateY(0);
}

.filter-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.filter-title {
  font-size: 32rpx; /* text-lg */
  font-weight: bold;
  color: #f1f5f9; /* text-slate-100 */
}

.filter-close {
  color: #f1f5f9; /* text-slate-100 */
}

.filter-group {
  margin-bottom: 32rpx;
}

.filter-group-title {
  display: block;
  font-size: 28rpx; /* text-sm */
  color: #cbd5e1; /* text-slate-300 */
  margin-bottom: 24rpx;
}

.filter-options {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.filter-option {
  padding: 12rpx 24rpx;
  border-radius: 40rpx; /* rounded-2xl */
  background-color: rgba(30, 41, 59, 0.8); /* bg-slate-800/80 */
  color: #f1f5f9; /* text-slate-100 */
  border: 1px solid rgba(100, 116, 139, 0.6); /* border-slate-700/60 */
  font-size: 24rpx; /* text-xs */
}

.filter-option.active {
  background: linear-gradient(to bottom right, #3b82f6, #60a5fa); /* bg-blue-600 */
  color: #ffffff;
  border: none;
}

.filter-confirm {
  width: 100%;
  padding: 20rpx;
  border-radius: 40rpx; /* rounded-2xl */
  background: linear-gradient(to bottom right, #3b82f6, #60a5fa); /* bg-blue-600 */
  color: #ffffff;
  font-size: 28rpx; /* text-sm */
  border: none;
  margin-top: 16rpx;
}