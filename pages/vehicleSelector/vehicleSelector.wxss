/* 选择车辆页面样式 */
.container {
  width: 100%;
  height: 100vh;
  background-color: #0f172a;
  display: flex;
  flex-direction: column;
}





/* 内容区域 */
.content {
  flex: 1;
  background-color: #0f172a;
  padding: 0 32rpx;
  position: relative;
}



/* 搜索区域 */
.search-section {
  padding-top: 0rpx;
  padding-bottom: 16rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.search-container {
  flex: 1;
  position: relative;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #94a3b8;
  z-index: 1;
}

.search-input {
  width: 100%;
  padding: 16rpx 24rpx 16rpx 80rpx;
  border-radius: 32rpx;
  background-color: rgba(30, 41, 59, 0.8);
  font-size: 24rpx;
  color: #f1f5f9;
  border: 1px solid rgba(100, 116, 139, 0.6);
}

.search-input::placeholder {
  color: #94a3b8;
}

.filter-button {
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  background-color: rgba(30, 41, 59, 0.8);
  font-size: 24rpx;
  color: #f1f5f9;
  display: flex;
  align-items: center;
  gap: 8rpx;
  border: 1px solid rgba(100, 116, 139, 0.6);
}

.filter-icon {
  color: #f1f5f9;
}

/* 已选择提示 */
.selection-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
}

.selection-text {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-label {
  color: #94a3b8;
}

.selected-count {
  color: #60a5fa;
  font-weight: 600;
}

.clear-button {
  font-size: 20rpx;
  color: #60a5fa;
  background: none;
  border: none;
}

/* 车辆列表 */
.vehicle-list {
  flex: 1;
  padding-bottom: 32rpx;
}

/* 加载更多 */
.load-more {
  border-radius: 48rpx;
  background-color: rgba(15, 23, 42, 0.6);
  border: 1px dashed rgba(100, 116, 139, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx 0;
  font-size: 24rpx;
  color: #64748b;
}

.more-icon {
  margin-right: 16rpx;
  color: #64748b;
}

