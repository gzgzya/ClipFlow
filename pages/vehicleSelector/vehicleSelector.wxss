/* 选择车辆页面样式 */
.container {
  width: 100%;
  height: 100vh;
  background-color: #0f172a;
  display: flex;
  flex-direction: column;
}

/* 状态栏 */
.status-bar {
  height: 40rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 20rpx;
  color: #f1f5f9;
  background-color: rgba(0, 0, 0, 0.8);
}

.status-text {
  font-weight: 600;
}

.status-icons {
  display: flex;
  align-items: center;
}

.status-icon {
  margin-left: 8rpx;
}

/* 顶部导航 */
.nav-bar {
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(to right, #0f172a, #1e293b);
  color: #f1f5f9;
}

.nav-button {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: rgba(30, 41, 59, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  color: #f1f5f9;
}

.nav-title {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-main {
  font-size: 28rpx;
  font-weight: 600;
}

.title-sub {
  font-size: 20rpx;
  color: #94a3b8;
}

.select-all-button {
  font-size: 24rpx;
  color: #60a5fa;
  background: none;
  border: none;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #0f172a;
  padding: 0 32rpx;
  position: relative;
}

/* 搜索区域 */
.search-section {
  padding-top: 24rpx;
  padding-bottom: 16rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.search-container {
  flex: 1;
  position: relative;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #94a3b8;
  z-index: 1;
}

.search-input {
  width: 100%;
  padding: 16rpx 24rpx 16rpx 80rpx;
  border-radius: 32rpx;
  background-color: rgba(30, 41, 59, 0.8);
  font-size: 24rpx;
  color: #f1f5f9;
  border: 1px solid rgba(100, 116, 139, 0.6);
}

.search-input::placeholder {
  color: #94a3b8;
}

.filter-button {
  padding: 12rpx 24rpx;
  border-radius: 32rpx;
  background-color: rgba(30, 41, 59, 0.8);
  font-size: 24rpx;
  color: #f1f5f9;
  display: flex;
  align-items: center;
  gap: 8rpx;
  border: 1px solid rgba(100, 116, 139, 0.6);
}

.filter-icon {
  color: #f1f5f9;
}

/* 已选择提示 */
.selection-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
}

.selection-text {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.info-label {
  color: #94a3b8;
}

.selected-count {
  color: #60a5fa;
  font-weight: 600;
}

.clear-button {
  font-size: 20rpx;
  color: #60a5fa;
  background: none;
  border: none;
}

/* 车辆列表 */
.vehicle-list {
  flex: 1;
  padding-bottom: 32rpx;
}

/* 加载更多 */
.load-more {
  border-radius: 48rpx;
  background-color: rgba(15, 23, 42, 0.6);
  border: 1px dashed rgba(100, 116, 139, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 48rpx 0;
  font-size: 24rpx;
  color: #64748b;
}

.more-icon {
  margin-right: 16rpx;
  color: #64748b;
}

/* 底部操作栏 */
.bottom-bar {
  height: 128rpx;
  padding: 0 32rpx;
  background-color: rgba(0, 0, 0, 0.95);
  border-top: 1px solid #1e293b;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.cancel-button {
  padding: 20rpx 32rpx;
  border-radius: 32rpx;
  background-color: #1e293b;
  color: #f1f5f9;
  font-size: 24rpx;
  font-weight: 500;
  border: none;
}

.confirm-button {
  padding: 20rpx 32rpx;
  border-radius: 32rpx;
  background-color: #3b82f6;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 10px 20px rgba(59, 130, 246, 0.4);
  border: none;
}

.count-badge {
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
  background-color: rgba(255, 255, 255, 0.2);
  font-size: 20rpx;
}