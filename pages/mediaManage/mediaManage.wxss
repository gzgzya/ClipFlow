/* 素材管理页面样式 */
.container {
  width: 100%;
  height: 100vh;
  background-color: #0f172a;
  display: flex;
  flex-direction: column;
}

/* 状态栏 */
.status-bar {
  height: 40rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 20rpx;
  color: #f1f5f9;
  background-color: rgba(0, 0, 0, 0.8);
}

.status-text {
  font-weight: 600;
}

.status-icons {
  display: flex;
  align-items: center;
}

.status-icon {
  margin-left: 8rpx;
}

/* 顶部导航 */
.nav-bar {
  height: 96rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(to right, #0f172a, #1e293b);
  color: #f1f5f9;
}

.nav-button {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  background-color: rgba(30, 41, 59, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  color: #f1f5f9;
}

.nav-title {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title-main {
  font-size: 28rpx;
  font-weight: 600;
}

.title-sub {
  font-size: 20rpx;
  color: #94a3b8;
}

.done-button {
  font-size: 24rpx;
  color: #60a5fa;
  background: none;
  border: none;
}

/* 内容区域 */
.content {
  flex: 1;
  background-color: #0f172a;
  padding: 0 32rpx;
}

/* 车辆信息条 */
.vehicle-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  font-size: 22rpx;
}

.vehicle-details {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.vehicle-image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  border: 1px solid #334155;
}

.vehicle-text {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.vehicle-name {
  color: #f1f5f9;
}

.vehicle-stats {
  font-size: 20rpx;
  color: #64748b;
}

.timeline-count {
  font-size: 20rpx;
  color: #94a3b8;
}

.highlight {
  color: #60a5fa;
}

/* 筛选与排序 */
.filter-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 22rpx;
  color: #94a3b8;
  margin-bottom: 16rpx;
}

.filter-buttons {
  display: flex;
  gap: 8rpx;
}

.filter-button {
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
  background-color: #1e293b;
  color: #f1f5f9;
  border: none;
}

.filter-button.active {
  background-color: #3b82f6;
  color: #ffffff;
}

.sort-button {
  display: flex;
  align-items: center;
  space-x: 8rpx;
  background: none;
  border: none;
  color: #f1f5f9;
}

.sort-icon {
  color: #f1f5f9;
}

/* 素材列表 */
.materials-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

/* 时间线预览 */
.timeline-section {
  margin-bottom: 32rpx;
}

.timeline-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.timeline-title {
  font-size: 22rpx;
  color: #94a3b8;
}

.timeline-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.info-text {
  font-size: 20rpx;
  color: #64748b;
}

.edit-button {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 16rpx;
  border-radius: 32rpx;
  background-color: rgba(59, 130, 246, 0.1);
  border: 1px solid rgba(59, 130, 246, 0.6);
  font-size: 20rpx;
  color: #60a5fa;
}

.edit-icon {
  margin-right: 8rpx;
  color: #60a5fa;
}

.timeline-preview {
  padding: 16rpx 20rpx;
  border-radius: 32rpx;
  background-color: rgba(15, 23, 42, 0.9);
  border: 1px solid #1e293b;
}

.timeline-items {
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: max-content;
}

.add-timeline-item {
  min-width: 112rpx;
  height: 80rpx;
  border-radius: 24rpx;
  background-color: #1e293b;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 1px dashed #475569;
  font-size: 20rpx;
  color: #94a3b8;
}

.add-icon {
  margin-bottom: 8rpx;
  color: #94a3b8;
}